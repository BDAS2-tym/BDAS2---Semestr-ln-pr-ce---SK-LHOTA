<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDAS2_Sem_Prace_Cincibus_Tluchor.Windows"
        xmlns:conv="clr-namespace:BDAS2_Sem_Prace_Cincibus_Tluchor.Class.Text_Converters"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="BDAS2_Sem_Prace_Cincibus_Tluchor.Windows.DialogHierarchieSoutezi"
        mc:Ignorable="d"
        Title="Hierarchie soutěží" Height="400" Width="650" FontFamily="Century Gothic" FontSize="14" Icon="/Images/Ikony/Ikona_Souteze.ico" MinWidth="500" MinHeight="400" MaxWidth="1000" MaxHeight="700">

    <Window.Resources>
        <conv:KonciciKontraktyConverter x:Key="KonciciKontraktyConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Img/pozadi_2_dialog_okna.png"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.Background>
                <ImageBrush ImageSource="/Images/Img/pozadi_3_dialog_okna.png"/>
            </Grid.Background>

            <Button x:Name="btnOk" Content="OK" Width="100" Padding="5" Margin="0,5,0,5"
        FontFamily="Century Gothic" FontSize="14"
        Style="{StaticResource HoverFadeButtonStyle}" TabIndex="3" Click="BtnOk_Click">
                <Button.Background>
                    <SolidColorBrush Color="#DDC5D709" Opacity="0.85"/>
                </Button.Background>
                <Button.BorderBrush>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF9AE818"/>
                        <GradientStop Color="#DD97F60F" Offset="1"/>
                    </LinearGradientBrush>
                </Button.BorderBrush>
            </Button>

        </Grid>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <ListBox Grid.Row="0" ItemsSource="{Binding HierarchieSoutezi}" Margin="15,15,15,15" FontSize="12" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" BorderBrush="#125C64" BorderThickness="2">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

    </Grid>

</Window>
