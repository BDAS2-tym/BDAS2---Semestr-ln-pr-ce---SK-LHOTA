<Window x:Class="BDAS2_Sem_Prace_Cincibus_Tluchor.Windows.DialogPridejTrenink"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Přidání tréninku"
        Height="672" Width="562"
        MinWidth="562" MinHeight="672"
        MaxWidth="620" MaxHeight="730"
        Icon="/Images/Ikony/Ikona_Okna_Pridani.ico">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Logo sekce -->
        <Border Grid.Row="0" Padding="10">
            <Border.Background>
                <ImageBrush ImageSource="/Images/Img/pozadi_1_dialog_okna.png" Stretch="UniformToFill"/>
            </Border.Background>
            <Image Source="/Images/Img/Logo_SK_Lhota.png" HorizontalAlignment="Center" Height="100"/>
        </Border>

        <!-- Formulář -->
        <Grid Grid.Row="1">
            <Grid.Background>
                <ImageBrush Stretch="Fill" ImageSource="/Images/Img/pozadi_2_dialog_okna.png"/>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Popis -->
            <TextBlock Grid.Row="0" Grid.Column="0"
                       Text="Náplň tréninku:"
                       Margin="5"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="Century Gothic"
                       FontSize="14"
                       FontWeight="Bold"
                       TextWrapping="Wrap"/>

            <!-- NAHRAZENO: RichTextBox -> TextBox -->
            <TextBox x:Name="tboxPopisTreninku"
                     Grid.Row="0" Grid.Column="1"
                     Margin="50,12,50,12"
                     TabIndex="1"
                     FontFamily="Century Gothic"
                     FontSize="12"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     MaxLength="30"
                     Text="{Binding Popis, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Datum -->
            <TextBlock Grid.Row="1" Grid.Column="0"
                       Text="Datum a čas tréninku:"
                       Margin="5"
                       FontFamily="Century Gothic"
                       FontSize="14"
                       FontWeight="Bold"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <xctk:DateTimePicker Grid.Row="1" Grid.Column="1"
                                 Value="{Binding SelectedDateTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 FormatString="yyyy-dd-MM HH:mm"
                                 Watermark="Vyber datum a čas"
                                 ShowButtonSpinner="False"
                                 Margin="50,43,50,43"
                                 TabIndex="2"/>

            <!-- Místo -->
            <TextBlock Grid.Row="2" Grid.Column="0"
                       Text="Místo tréninku:"
                       Margin="5"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="Century Gothic"
                       FontSize="14"
                       FontWeight="Bold"
                       TextWrapping="Wrap"/>

            <TextBox Grid.Row="2" Grid.Column="1"
                     Margin="50,43,50,43"
                     TextWrapping="Wrap"
                     MaxLength="30"
                     VerticalContentAlignment="Center"
                     TabIndex="3"
                     FontFamily="Century Gothic"
                     FontSize="12"
                     Text="{Binding Misto, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Trenér -->
            <TextBlock Grid.Row="3" Grid.Column="0"
                       Text="Vyberte trenéra:"
                       Margin="5"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="Century Gothic"
                       FontSize="14"
                       FontWeight="Bold"/>

            <ComboBox Grid.Row="3" Grid.Column="1"
                      Margin="50,43,50,43"
                      TabIndex="4"
                      FontFamily="Century Gothic"
                      FontSize="12"
                      ItemsSource="{Binding Treneri}"
                      SelectedItem="{Binding SelectedTrener, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      DisplayMemberPath="Display"/>
        </Grid>

        <!-- Tlačítka -->
        <Border Grid.Row="2">
            <Border.Background>
                <ImageBrush ImageSource="/Images/Img/pozadi_3_dialog_okna.png"/>
            </Border.Background>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="Přidej"
                        Width="100"
                        Margin="0,5,0,5"
                        FontFamily="Century Gothic"
                        FontSize="14"
                        TabIndex="5"
                        Style="{StaticResource HoverFadeButtonStyle}"
                        Command="{Binding PridejCommand}"/>

                <Button Content="Reset"
                        Width="100"
                        Margin="100,5,0,5"
                        FontFamily="Century Gothic"
                        FontSize="14"
                        TabIndex="6"
                        Style="{StaticResource HoverFadeButtonStyle}"
                        Command="{Binding ResetCommand}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
