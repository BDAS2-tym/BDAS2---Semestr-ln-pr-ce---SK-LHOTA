<Window x:Class="BDAS2_Sem_Prace_Cincibus_Tluchor.Windows.DialogZpravaOkno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zpráva uživatelům"
        Height="600" Width="1100"
        WindowStartupLocation="CenterScreen"
        Icon="/Images/Ikony/Ikona_Notifikace.ico">

    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="/Images/Img/pozadi_2_dialog_okna.png"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="250" />
        </Grid.ColumnDefinitions>

        <!-- LEVÝ BLOK -->
        <Border Grid.Column="0"
                Margin="15"
                BorderBrush="#125C64"
                BorderThickness="2"
                CornerRadius="6"
                Background="#66D1F9FF">

            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Text="Odeslat zprávu uživatelům"
                           FontSize="28"
                           FontWeight="Bold"
                           FontFamily="Century Gothic"
                           Foreground="Black"
                           HorizontalAlignment="Center"
                           Margin="0 10"/>

                <Grid Grid.Row="1" Margin="0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.3*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>

                    <!-- PŘÍJEMCI -->
                    <StackPanel Grid.Column="0" Margin="0 0 15 0">
                        <TextBlock Text="Příjemci:"
                                   FontWeight="Bold"
                                   FontSize="16"
                                   Margin="0 0 5 5"
                                   FontFamily="Century Gothic"/>

                        <ListBox x:Name="lbPrijemci"
                                 ItemsSource="{Binding Uzivatele}"
                                 BorderBrush="#125C64"
                                 BorderThickness="1"
                                 Height="380"
                                 FontFamily="Century Gothic"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 TabIndex="1">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding UzivatelskeJmeno}"
                                              IsChecked="{Binding JeVybran, Mode=TwoWay}" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>

                    <!-- TEXT ZPRÁVY -->
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Zpráva:"
                                   FontWeight="Bold"
                                   FontSize="16"
                                   Margin="0 0 5 5"
                                   FontFamily="Century Gothic"/>

                        <TextBox x:Name="txtZprava"
                                 Text="{Binding Zprava, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 BorderBrush="#125C64"
                                 BorderThickness="1"
                                 VerticalScrollBarVisibility="Auto"
                                 FontFamily="Century Gothic"
                                 FontSize="14"
                                 Height="380"
                                 TabIndex="2"/>
                    </StackPanel>

                </Grid>
            </Grid>

        </Border>

        <!-- PRAVÝ PANEL -->
        <Border Grid.Column="1" Background="#77B3FB">
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Text="Zpráva"
                           Foreground="Black"
                           FontSize="25"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,15"
                           FontFamily="Century Gothic"/>

                <Grid Grid.Row="1" Margin="0,0,0,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- ODESLAT -->
                    <Button x:Name="btnOdeslat"
                            Grid.Row="0"
                            Margin="0,8,0,5"
                            Command="{Binding OdeslatCommand}"
                            Style="{StaticResource HoverFadeButtonStyle2}"
                            TabIndex="3">
                        <StackPanel Orientation="Horizontal" Margin="22,0,0,0">
                            <Image Source="/Images/Img/send.png"
                                   Width="40" Height="40"
                                   Margin="0,0,10,0"/>
                            <TextBlock Text="Odeslat" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- ZRUŠIT -->
                    <Button x:Name="btnZrusit"
                            Grid.Row="1"
                            Margin="0,8,0,5"
                            Command="{Binding ZrusitCommand}"
                            Style="{StaticResource HoverFadeButtonStyle2}"
                            TabIndex="4">
                        <StackPanel Orientation="Horizontal" Margin="22,0,0,0">
                            <Image Source="/Images/Img/left.png"
                                   Width="40" Height="40"
                                   Margin="0,0,10,0"/>
                            <TextBlock Text="Zpět" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                </Grid>
            </Grid>
        </Border>

    </Grid>
</Window>
