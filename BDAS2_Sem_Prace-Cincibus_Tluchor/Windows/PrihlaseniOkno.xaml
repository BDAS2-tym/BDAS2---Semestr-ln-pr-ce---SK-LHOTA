<Window x:Class="BDAS2_Sem_Prace_Cincibus_Tluchor.Windows.PrihlaseniOkno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Přihlášení"
        Height="600"
        Width="1000"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">

    <!-- Vnější rámeček s barevným přechodem a zaoblenými rohy -->
    <Border CornerRadius="12">
        <Border CornerRadius="10" BorderThickness="2" Opacity="0.95">

            <!-- Rámeček – barevný okraj -->
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="Aqua" Offset="0"/>
                    <GradientStop Color="#DA34AE" Offset="0.75"/>
                    <GradientStop Color="#8A16C1" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <!-- Barevné pozadí okna -->
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#5D1FA3" Offset="0"/>
                    <GradientStop Color="#2E004B" Offset="0.5"/>
                    <GradientStop Color="#C71585" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <!-- Hlavní rozložení -->
            <Grid>
                <Grid.RowDefinitions>
                    
                    <!-- Horní panel (lišta s tlačítky) -->
                    <RowDefinition Height="30"/>

                    <!-- Tělo přihlašovacího formuláře -->
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!-- Horní lišta s tlačítky minimalizace a zavření -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                    </Grid.ColumnDefinitions>

                    <!-- Text v horní liště -->
                    <TextBlock Text="LOG IN"
                               Foreground="DarkGray"
                               FontSize="12"
                               FontFamily="Montserrat"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>

                    <!-- Tlačítko minimalizace -->
                    <Button x:Name="btnMinimize"
                            BorderThickness="0"
                            Content="-"
                            Foreground="White"
                            FontSize="16"
                            Cursor="Hand"
                            Grid.Column="1"
                            Click="BtnMinimize_Click"
                            Background="Gray">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Gray"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9" Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Tlačítko zavření aplikace -->
                    <Button x:Name="btnClose"
                            BorderThickness="0"
                            Content="X"
                            Foreground="White"
                            FontSize="12"
                            Cursor="Hand"
                            Grid.Column="2"
                            Click="BtnClose_Click"
                            Background="Gray">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Gray"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9" Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <!-- Tělo formuláře (přihlašovací část) -->
                <StackPanel Width="260"
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Vertical"
                            Margin="0,20,0,20">

                    <!-- Ikona uživatele -->
                    <Image Source="/Images/Ikony/Ikona_Uzivatel.png"
                           Width="120" Height="120" Margin="0,0,0,35"/>

                    <!-- Popisek pro jméno -->
                    <TextBlock Text="Přihlašovací jméno"
                               Foreground="DarkGray"
                               FontSize="13"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               Margin="0,10,0,0"/>

                    <!-- Textové pole pro jméno -->
                    <TextBox x:Name="txtUser"
                             FontSize="13"
                             FontFamily="Montserrat"
                             Foreground="White"
                             CaretBrush="LightGray"
                             BorderBrush="DarkGray"
                             BorderThickness="0,0,0,2"
                             Height="28"
                             VerticalContentAlignment="Center"
                             Margin="0,5,0,0"
                             Padding="25,0,0,0" TabIndex="1">
                        <TextBox.Background>
                            <ImageBrush ImageSource="/Images/Ikony/user-icon.png"
                                        Stretch="None"
                                        AlignmentX="Left"
                                        AlignmentY="Center"/>
                        </TextBox.Background>
                    </TextBox>

                    <!-- Popisek pro heslo -->
                    <TextBlock Text="Heslo"
                               Foreground="DarkGray"
                               FontSize="13"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               Margin="0,15,0,0"/>

                    <!-- Pole pro heslo -->
                    <PasswordBox x:Name="txtPass"
                                 FontSize="13"
                                 FontFamily="Montserrat"
                                 Foreground="White"
                                 CaretBrush="LightGray"
                                 BorderBrush="DarkGray"
                                 BorderThickness="0,0,0,2"
                                 Height="28"
                                 VerticalContentAlignment="Center"
                                 Margin="0,5,0,0"
                                 Padding="25,0,0,0" TabIndex="2">
                        <PasswordBox.Background>
                            <ImageBrush ImageSource="/Images/Ikony/key1-icon.png"
                                        Stretch="None"
                                        AlignmentX="Left"
                                        AlignmentY="Center"/>
                        </PasswordBox.Background>
                    </PasswordBox>

                    <!-- Tlačítko přihlášení -->
                    <Button x:Name="btnLogin"
                            Content="PŘIHLÁSIT"
                            Foreground="White"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Margin="0,30,0,10"
                            Click="BtnLogin_Click" TabIndex="3">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#462AD8"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#28AEED"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="150" Height="40" CornerRadius="20" Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Pokračovat bez přihlášení -->
                    <TextBlock Text="Pokračovat bez přihlášení"
                               Foreground="White"
                               FontSize="12"
                               FontFamily="Montserrat"
                               Margin="0,5,0,15"
                               Cursor="Hand"
                               HorizontalAlignment="Center"
                               MouseLeftButtonDown="BtnBezPrihlaseni_Click"/>

                    <!-- Registrace -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Nemáte účet?" Foreground="DarkGray" FontSize="12" FontFamily="Montserrat"/>
                        <TextBlock Text=" Registrace zde"
                                   Foreground="White"
                                   FontSize="12"
                                   FontFamily="Montserrat"
                                   Cursor="Hand"
                                   MouseLeftButtonDown="BtnRegistrace_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>
