<Window x:Class="BDAS2_Sem_Prace_Cincibus_Tluchor.Windows.BinarniObsahOkno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Správa binárního obsahu"
        Height="720" Width="1300"
        Icon="/Images/Ikony/Ikona_Binarni_Obsah.ico "
        WindowStartupLocation="CenterScreen" PreviewKeyDown="Window_PreviewKeyDown">

    <!-- TODO dodělat stylizování -->

    <Grid>
        <!-- Pozadí -->
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Img/pozadi_2_dialog_okna.png"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Levý panel -->
        <Border Grid.Column="0" Background="#77B3FB" BorderBrush="#125C64" BorderThickness="2">
            <Grid Margin="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Nadpis -->
                <TextBlock Text="Správa obsahu"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="Black"
                           FontFamily="Century Gothic"
                           HorizontalAlignment="Left"
                           Margin="0,10,0,20"/>

                <Grid Grid.Row="1" VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!-- TextBoxy -->
                    <Label Grid.Row="0" Content="Název souboru:" FontFamily="Century Gothic" FontSize="14"/>
                    <TextBox Grid.Row="1" x:Name="tboxNazev" FontFamily="Century Gothic" Margin="0,0,0,8" IsHitTestVisible="False"/>

                    <Label Grid.Row="2" Content="Typ souboru:" FontFamily="Century Gothic" FontSize="14"/>
                    <TextBox Grid.Row="3" x:Name="tboxTyp" FontFamily="Century Gothic" Margin="0,0,0,8" IsHitTestVisible="False"/>

                    <Label Grid.Row="4" Content="Přípona:" FontFamily="Century Gothic" FontSize="14"/>
                    <TextBox Grid.Row="5" x:Name="tboxPripona" FontFamily="Century Gothic" Margin="0,0,0,14" IsHitTestVisible="False"/>

                    <!-- TLAČÍTKA -->
                    <Button Grid.Row="6"
                            x:Name="btnVybratSoubor"
                            Content="Vybrat soubor"
                            Click="BtnVybratSoubor_Click"
                            Style="{StaticResource HoverFadeButtonStyle2}"
                            Padding="18,4,18,4"
                            VerticalContentAlignment="Center"
                            Margin="0,15,0,8"/>

                    <Button Grid.Row="7"
                            x:Name="btnUlozit"
                            Content="Uložit do databáze"
                            Click="BtnUlozit_Click"
                            Style="{StaticResource HoverFadeButtonStyle2}"
                            Margin="0,5,0,8"/>

                    <Button Grid.Row="8"
                            x:Name="btnStahnout"
                            Content="Stáhnout soubor"
                            Click="BtnStahnoutVybrany_Click"
                            Style="{StaticResource HoverFadeButtonStyle2}"
                            Margin="0,5,0,8"/>

                    <Button Grid.Row="9"
                            x:Name="btnSmazat"
                            Content="Smazat z databáze"
                            Click="BtnSmazatVybrany_Click"
                            Style="{StaticResource HoverFadeButtonStyle2}"
                            Margin="0,5,0,8"/>

                    <Button Grid.Row="10"
            x:Name="btnZobrazit"
            Content="Zobrazit obrázek"
            Click="BtnZobrazitObrazek_Click"
            Style="{StaticResource HoverFadeButtonStyle2}" Margin="0,5,0,8"/>

                    <Button Grid.Row="11"
                        x:Name="btnNajdi"
                        Content="Najdi"
                        Style="{StaticResource HoverFadeButtonStyle2}" Margin="0,5,0,8" Click="BtnNajdi_Click"/>

                    <Button Grid.Row="12"
                        x:Name="btnZpet"
                        Content="Zpět"
                        Style="{StaticResource HoverFadeButtonStyle2}" Margin="0,5,0,0" Click="BtnZpet_Click"/>

                    <!-- STATUS -->
                    <TextBlock Grid.Row="13"
               x:Name="txtStatus"
               Text="Soubor nenahrán"
               Foreground="Black"
               FontStyle="Italic"
               FontFamily="Century Gothic"
               FontSize="13"
               TextAlignment="Center"
               Margin="0,30,0,0"/>
                </Grid>

            </Grid>
        </Border>

        <!-- Pravá část -->
        <Grid Grid.Column="1" Margin="10,10,15,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="350"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Náhled -->
            <Border Grid.Row="0"
                    BorderBrush="#125C64"
                    BorderThickness="2"
                    CornerRadius="8"
                    Background="White"
                    Margin="0,0,0,10">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto">
                    <Image x:Name="imgNahled"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="5"/>
                </ScrollViewer>
            </Border>

            <!-- Datagrid -->
            <Border Grid.Row="1"
                    BorderBrush="#125C64"
                    BorderThickness="2"
                    CornerRadius="6">
                <DataGrid x:Name="dgBinarniObsah"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          FontFamily="Century Gothic"
                          FontSize="11"
                          RowHeight="30"
                          AlternatingRowBackground="#FFF0F8F8"
                          MouseDoubleClick="DgBinarniObsah_MouseDoubleClick">

                    <!-- Styl hlaviček -->
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#AABBCC"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="FontFamily" Value="Century Gothic"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="BorderBrush" Value="#125C64"/>
                            <Setter Property="BorderThickness" Value="0,0,2,2"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <!-- Barvy při výběru -->
                    <DataGrid.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#fad870"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#fad870"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black"/>
                    </DataGrid.Resources>
                    <DataGrid.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFF3F3F3"/>
                            <GradientStop Color="#FFE8FFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </DataGrid.Background>

                    <!-- Sloupce -->
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Název souboru" Binding="{Binding NazevSouboru}" Width="2*" />
                        <DataGridTextColumn Header="Typ" Binding="{Binding TypSouboru}" Width="1*" />
                        <DataGridTextColumn Header="Přípona" Binding="{Binding PriponaSouboru}" Width="0.8*" />
                        <DataGridTextColumn Header="Datum nahrání" Binding="{Binding DatumNahrani, StringFormat=d. MM. yyyy HH:mm}" Width="1.5*" />
                        <DataGridTextColumn Header="Datum změny" Binding="{Binding DatumModifikace, StringFormat=d. MM. yyyy HH:mm}" Width="1.5*" />
                        <DataGridTextColumn Header="Operace" Binding="{Binding Operace}" Width="1*" />
                        <DataGridTextColumn Header="Uživatel" Binding="{Binding Uzivatel}" Width="1*" />

                        <!--  Sloupec Akce  -->
                        <DataGridTemplateColumn Header="Akce" Width="1.8*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="Upravit" Width="70" Margin="2" Style="{StaticResource HoverFadeButtonStyle4}" Click="BtnUpravit_Click"/>
                                        <Button Content="Smazat" Width="70" Margin="2" Style="{StaticResource HoverFadeButtonStyle4}" Click="BtnSmazatVybrany_Click"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Window>
