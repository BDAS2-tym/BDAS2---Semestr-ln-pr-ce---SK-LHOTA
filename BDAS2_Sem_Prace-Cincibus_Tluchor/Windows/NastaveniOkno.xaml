<Window x:Class="BDAS2_Sem_Prace_Cincibus_Tluchor.Windows.NastaveniOkno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Nastavení systému"
        Height="500" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Icon="/Images/Ikony/Ikona_Nastaveni.ico">

    <Grid>
        <!-- Pozadí -->
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Img/pozadi_2_dialog_okna.png"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <!-- Levý panel -->
            <ColumnDefinition Width="250"/>
            <!-- Pravý panel -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEVÝ PANEL -->
        <Border Grid.Column="0" Background="#77B3FB">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Nadpis -->
                <TextBlock Text="Nastavení"
                           Foreground="Black"
                           FontSize="26"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,20"
                           FontFamily="Century Gothic"/>

                <!-- Tlačítka -->
                <Grid Grid.Row="1" Margin="0,0,0,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Styl tlačítek -->
                    <Grid.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#77B3FB"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="FontFamily" Value="Century Gothic"/>
                            <Setter Property="FontSize" Value="20"/>
                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="Padding" Value="20,8"/>
                            <Setter Property="Margin" Value="10,6"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#111827"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Resources>

                    <!-- Button Binární obsah -->
                    <Button x:Name="btnBinarniObsah" Grid.Row="0" Margin="0,5,0,10" TabIndex="1" Padding="12,4,12,4" Style="{StaticResource HoverFadeButtonStyle2}" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" Click="BtnBinarniObsah_Click">
                        <StackPanel Orientation="Horizontal" Margin="22,0,0,0">
                            <Image Source="/Images/Img/binary_file.png" Width="40" Height="40" Margin="0,0,10,0"/>
                            <TextBlock Text="Binární obsah" VerticalAlignment="Center" FontSize="18"/>
                        </StackPanel>
                    </Button>

                    <!-- Button Uživatelské účty -->
                    <Button x:Name="btnUzivatele" Grid.Row="1" Margin="0,10,0,10" TabIndex="2" Padding="12,4,12,4" Style="{StaticResource HoverFadeButtonStyle2}" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" Click="BtnUzivatele_Click">
                        <StackPanel Orientation="Horizontal" Margin="22,0,0,0">
                            <Image Source="/Images/Img/user.png" Width="40" Height="40" Margin="0,0,10,0"/>
                            <TextBlock Text="Uživatelské účty" VerticalAlignment="Center" FontSize="18"/>
                        </StackPanel>
                    </Button>

                    <!-- Button Systémový katalog -->
                    <Button x:Name="btnSystemovyKatalog" Grid.Row="2" Margin="0,10,0,10" TabIndex="3" Padding="12,4,12,4" Style="{StaticResource HoverFadeButtonStyle2}" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" Click="BtnSystemovyKatalog_Click">
                        <StackPanel Orientation="Horizontal" Margin="22,0,0,0">
                            <Image Source="/Images/Img/sys_catalog.png" Width="40" Height="40" Margin="0,0,10,0"/>
                            <TextBlock Text="Systémový katalog" VerticalAlignment="Center" FontSize="18"/>
                        </StackPanel>
                    </Button>

                    <!-- Button Záznamy změn -->
                    <Button x:Name="btnZmeny" Grid.Row="3" Margin="0,10,0,10" TabIndex="3" Padding="12,4,12,4" Style="{StaticResource HoverFadeButtonStyle2}" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" Click="BtnZmeny_Click">
                        <StackPanel Orientation="Horizontal" Margin="22,0,0,0">
                            <Image Source="/Images/Img/log_table.png" Width="40" Height="40" Margin="0,0,10,0"/>
                            <TextBlock Text="Záznamy změn" VerticalAlignment="Center" FontSize="18"/>
                        </StackPanel>
                    </Button>

                    <!-- Button Zpět -->
                    <Button x:Name="btnZpet" Grid.Row="4" Margin="0,5,0,10" TabIndex="5" Padding="12,4,12,4" Style="{StaticResource HoverFadeButtonStyle2}" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" Click="BtnZpet_Click">
                        <StackPanel Orientation="Horizontal" Margin="22,0,0,0">
                            <Image Source="/Images/Img/left.png" Width="40" Height="40" Margin="0,0,10,0"/>
                            <TextBlock Text="Zpět" VerticalAlignment="Center" FontSize="18"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <!-- PRAVÝ PANEL S OBRÁZKEM -->
        <Border Grid.Column="1"
                Margin="25"
                CornerRadius="25"
                BorderBrush="#FF787805"
                BorderThickness="2"
                Background="Olive"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
            <Grid>
                <Image Source="/Images/Img/hriste.jpeg"
                       Stretch="Uniform"
                       Width="700"
                       Height="400"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       Opacity="0.97"
                       Margin="10"/>
            </Grid>
        </Border>
    </Grid>
</Window>
