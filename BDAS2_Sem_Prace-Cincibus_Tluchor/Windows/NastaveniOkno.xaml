<Window x:Class="BDAS2_Sem_Prace_Cincibus_Tluchor.Windows.NastaveniOkno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Nastavení systému"
        Height="500" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>
        <!-- Pozadí -->
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Img/pozadi_2_dialog_okna.png"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <!-- Levý panel -->
            <ColumnDefinition Width="250"/>
            <!-- Pravý panel -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEVÝ PANEL -->
        <Border Grid.Column="0" Background="#77B3FB">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Nadpis -->
                <TextBlock Text="Nastavení"
                           Foreground="Black"
                           FontSize="26"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,20"
                           FontFamily="Century Gothic"/>

                <!-- Tlačítka -->
                <Grid Grid.Row="1" Margin="0,0,0,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Styl tlačítek -->
                    <Grid.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#77B3FB"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="FontFamily" Value="Century Gothic"/>
                            <Setter Property="FontSize" Value="20"/>
                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="Padding" Value="20,8"/>
                            <Setter Property="Margin" Value="10,6"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#111827"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Resources>

                    <!-- Binární obsah -->
                    <Button x:Name="btnBinarniObsah"
                            Grid.Row="0"
                            Click="BtnBinarniObsah_Click"
                            Content="Binární obsah"/>

                    <!-- Uživatelské účty -->
                    <Button x:Name="btnUzivatele"
                            Grid.Row="1"
                            Click="BtnUzivatele_Click"
                            Content="Uživatelské účty"/>

                    <!-- Systémový katalog -->
                    <Button x:Name="btnSystemovyKatalog"
                            Grid.Row="2"
                            Click="BtnSystemovyKatalog_Click"
                            Content="Systémový katalog"/>

                    <!-- Zpět -->
                    <Button x:Name="btnZpet"
                            Grid.Row="3"
                            Click="BtnZpet_Click"
                            Content="Zpět"/>
                </Grid>
            </Grid>
        </Border>

        <!-- PRAVÝ PANEL S OBRÁZKEM -->
        <Border Grid.Column="1"
                Margin="25"
                CornerRadius="25"
                BorderBrush="#125C64"
                BorderThickness="2"
                Background="Olive"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
            <Grid>
                <Image Source="/Images/Img/hriste.jpeg"
                       Stretch="Uniform"
                       Width="700"
                       Height="400"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       Opacity="0.97"
                       Margin="10"/>
            </Grid>
        </Border>
    </Grid>
</Window>
