<Window x:Class="BDAS2_Sem_Prace_Cincibus_Tluchor.Windows.NastaveniOkno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nastavení systému"
        Height="500" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="Transparent"
        AllowsTransparency="False"
        MouseDown="Window_MouseDown">

    <Grid>
        <!-- Pozadí -->
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Img/pozadi_2_dialog_okna.png"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEVÝ PANEL -->
        <Border Grid.Column="0" Background="#77B3FB">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Nastavení"
                           Foreground="Black"
                           FontSize="26"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,20"
                           FontFamily="Century Gothic"/>

                <Grid Grid.Row="1" Margin="0,0,0,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Binární obsah -->
                    <Button x:Name="btnBinarniObsah"
                            Grid.Row="0"
                            Margin="0,5,0,10"
                            TabIndex="1"
                            Padding="12,4,12,4"
                            Style="{StaticResource HoverFadeButtonStyle2}"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Top"
                            Command="{Binding OpenBinarniObsahCommand}"
                            IsEnabled="{Binding CanBinarniObsah}"
                            Opacity="{Binding BinarniObsahOpacity}">
                        <StackPanel Orientation="Horizontal" Margin="22,0,0,0">
                            <Image Source="/Images/Img/binary_file.png" Width="40" Height="40" Margin="0,0,10,0"/>
                            <TextBlock Text="Binární obsah" VerticalAlignment="Center" FontSize="18"/>
                        </StackPanel>
                    </Button>

                    <!-- Uživatelské účty -->
                    <Button x:Name="btnUzivatele"
                            Grid.Row="1"
                            Margin="0,10,0,10"
                            TabIndex="2"
                            Padding="12,4,12,4"
                            Style="{StaticResource HoverFadeButtonStyle2}"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Top"
                            Command="{Binding OpenUzivateleCommand}"
                            IsEnabled="{Binding CanUzivatele}"
                            Opacity="{Binding UzivateleOpacity}">
                        <StackPanel Orientation="Horizontal" Margin="22,0,0,0">
                            <Image Source="/Images/Img/user.png" Width="40" Height="40" Margin="0,0,10,0"/>
                            <TextBlock Text="Uživatelské účty" VerticalAlignment="Center" FontSize="18"/>
                        </StackPanel>
                    </Button>

                    <!-- Systémový katalog -->
                    <Button x:Name="btnSystemovyKatalog"
                            Grid.Row="2"
                            Margin="0,10,0,10"
                            TabIndex="3"
                            Padding="12,4,12,4"
                            Style="{StaticResource HoverFadeButtonStyle2}"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Top"
                            Command="{Binding OpenSystemovyKatalogCommand}"
                            IsEnabled="{Binding CanSystemovyKatalog}"
                            Opacity="{Binding SystemovyKatalogOpacity}">
                        <StackPanel Orientation="Horizontal" Margin="22,0,0,0">
                            <Image Source="/Images/Img/sys_catalog.png" Width="40" Height="40" Margin="0,0,10,0"/>
                            <TextBlock Text="Systémový katalog" VerticalAlignment="Center" FontSize="18"/>
                        </StackPanel>
                    </Button>

                    <!-- Záznamy změn -->
                    <Button x:Name="btnZmeny"
                            Grid.Row="3"
                            Margin="0,10,0,10"
                            TabIndex="4"
                            Padding="12,4,12,4"
                            Style="{StaticResource HoverFadeButtonStyle2}"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Top"
                            Command="{Binding OpenZmenyCommand}"
                            IsEnabled="{Binding CanZmeny}"
                            Opacity="{Binding ZmenyOpacity}">
                        <StackPanel Orientation="Horizontal" Margin="22,0,0,0">
                            <Image Source="/Images/Img/log_table.png" Width="40" Height="40" Margin="0,0,10,0"/>
                            <TextBlock Text="Záznamy změn" VerticalAlignment="Center" FontSize="18"/>
                        </StackPanel>
                    </Button>

                    <!-- Zpět -->
                    <Button x:Name="btnZpet"
                            Grid.Row="4"
                            Margin="0,5,0,10"
                            TabIndex="5"
                            Padding="12,4,12,4"
                            Style="{StaticResource HoverFadeButtonStyle2}"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Top"
                            Command="{Binding BackCommand}">
                        <StackPanel Orientation="Horizontal" Margin="22,0,0,0">
                            <Image Source="/Images/Img/left.png" Width="40" Height="40" Margin="0,0,10,0"/>
                            <TextBlock Text="Zpět" VerticalAlignment="Center" FontSize="18"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <!-- PRAVÝ PANEL S OBRÁZKEM -->
        <Border Grid.Column="1"
                Margin="25"
                CornerRadius="25"
                BorderBrush="#FF787805"
                BorderThickness="2"
                Background="Olive"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
            <Grid>
                <Image Source="/Images/Img/hriste.jpeg"
                       Width="700"
                       Height="400"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       Opacity="0.97"
                       Margin="10"/>
            </Grid>
        </Border>
    </Grid>
</Window>
