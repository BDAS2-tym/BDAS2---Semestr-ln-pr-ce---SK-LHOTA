<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDAS2_Sem_Prace_Cincibus_Tluchor.Windows"
        xmlns:conv="clr-namespace:BDAS2_Sem_Prace_Cincibus_Tluchor.Class.Text_Converters"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="BDAS2_Sem_Prace_Cincibus_Tluchor.Windows.DialogStatistikyTreninku"
        mc:Ignorable="d"
        Title="Statistiky tréninku" Height="400" Width="650" FontFamily="Century Gothic" FontSize="14" Icon="/Images/Ikony/Ikona_Treninky.ico" MinWidth="500" MinHeight="400" MaxWidth="750" MaxHeight="500">

    <Window.Resources>
        <conv:KonciciKontraktyConverter x:Key="KonciciKontraktyConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Img/pozadi_2_dialog_okna.png"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="0.8*"/>
            </Grid.ColumnDefinitions>
            <TextBlock TextWrapping="Wrap" Text="Vyberte měsíc:" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,15,0" FontWeight="Bold"/>
            <ComboBox x:Name="cbMesic" Grid.Column="1" VerticalAlignment="Center" Margin="50,0,50,0" TabIndex="1" StaysOpenOnEdit="True" SelectionChanged="CbMesic_SelectionChanged">
                <ComboBoxItem>Leden</ComboBoxItem>
                <ComboBoxItem>Únor</ComboBoxItem>
                <ComboBoxItem>Březen</ComboBoxItem>
                <ComboBoxItem>Duben</ComboBoxItem>
                <ComboBoxItem>Květen</ComboBoxItem>
                <ComboBoxItem>Červen</ComboBoxItem>
                <ComboBoxItem>Červenec</ComboBoxItem>
                <ComboBoxItem>Srpen</ComboBoxItem>
                <ComboBoxItem>Září</ComboBoxItem>
                <ComboBoxItem>Říjen</ComboBoxItem>
                <ComboBoxItem>Listopad</ComboBoxItem>
                <ComboBoxItem>Prosinec</ComboBoxItem>
            </ComboBox>

        </Grid>



        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.Background>
                <ImageBrush ImageSource="/Images/Img/pozadi_3_dialog_okna.png"/>
            </Grid.Background>

            <Button x:Name="btnOk" Content="OK" Width="100" Padding="5" Margin="0,5,0,5"
        FontFamily="Century Gothic" FontSize="14"
        Style="{StaticResource HoverFadeButtonStyle}" TabIndex="3" Click="BtnOk_Click">
                <Button.Background>
                    <SolidColorBrush Color="#DDC5D709" Opacity="0.85"/>
                </Button.Background>
                <Button.BorderBrush>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF9AE818"/>
                        <GradientStop Color="#DD97F60F" Offset="1"/>
                    </LinearGradientBrush>
                </Button.BorderBrush>
            </Button>

        </Grid>
        <Grid Grid.Row="1">
            <DataGrid x:Name="dgKontrakty"
    ItemsSource="{Binding StatistikyTreninku}"
    HorizontalScrollBarVisibility="Auto"
    VerticalScrollBarVisibility="Auto"
    AutoGenerateColumns="False"                        
    IsReadOnly="True"
    CanUserAddRows="False"
    FontFamily="Century Gothic" BorderBrush="#125C64" AlternatingRowBackground="#FFE0E0E0" AutomationProperties.IsColumnHeader="True" RowBackground="#FFF3F3F3" RowHeight="30" HeadersVisibility="Column" ColumnHeaderHeight="28" FontSize="11" GridLinesVisibility="None" SelectionMode="Single" Margin="15,15,15,15" Grid.RowSpan="3" BorderThickness="2">
                <!-- Změna barvy pozadí a písma při výběru řádku -->
                <DataGrid.Resources>

                    <!-- Změna barvy pozadí -->
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#fad870"/>
                    <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#fad870"/>

                    <!-- Změna barvy písma-->
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black"/>
                </DataGrid.Resources>
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <!-- Pozadí -->
                        <Setter Property="Background" Value="#AABBCC"/>

                        <!-- Barva textu -->
                        <Setter Property="Foreground" Value="Black"/>

                        <!-- Font -->
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="FontFamily" Value="Century Gothic"/>

                        <!-- Vycentrování textu -->
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>

                        <!-- Ohraničení -->
                        <Setter Property="BorderBrush" Value="#125C64"/>
                        <Setter Property="BorderThickness" Value="0,0,2,2"/>

                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFF3F3F3" Offset="0"/>
                        <GradientStop Color="#FFE8FFFF" Offset="1"/>
                    </LinearGradientBrush>
                </DataGrid.Background>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Den" Binding="{Binding Den}" Width="2*" ElementStyle="{StaticResource CenterCellStyle}" FontFamily="Century Gothic"/>
                    <DataGridTextColumn Header="Počet tréninků" Binding="{Binding Pocet}" Width="2*" ElementStyle="{StaticResource CenterCellStyle}" FontFamily="Century Gothic"/>

                    <!-- Procenta – vytvoření přes TemplateColumn, kvůli zobrazování atributů hráče -->
                    <DataGridTextColumn Header="Procenta" Binding="{Binding Procenta, StringFormat={}{0:F1}\%}" Width="2*" ElementStyle="{StaticResource CenterCellStyle}" FontFamily="Century Gothic">

                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#AABBCC"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="FontFamily" Value="Century Gothic"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="BorderBrush" Value="#125C64"/>
                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="FontWeight" Value="Normal"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridRow">
                                    <Border 
                        Name="DGR_Border"
                        Background="{TemplateBinding Background}" 
                        SnapsToDevicePixels="True">
                                        <DataGridCellsPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="DGR_Border" Property="Background" Value="#fad870"/>
                                        </Trigger>
                                        <DataTrigger Binding="{Binding Den}" Value="Nejvíce tréninků">
                                            <Setter TargetName="DGR_Border" Property="Background" Value="LightGreen"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Den}" Value="Nejméně tréninků">
                                            <Setter TargetName="DGR_Border" Property="Background" Value="LightCoral"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.RowStyle>

            </DataGrid>
        </Grid>

    </Grid>

</Window>
