<Window x:Name="DialogHledaniZapasu" x:Class="BDAS2_Sem_Prace_Cincibus_Tluchor.Windows.Search_Dialogs.DialogNajdiZapas"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDAS2_Sem_Prace_Cincibus_Tluchor.Windows"
        mc:Ignorable="d"
        Title="Vyhledávání zápasu" 
        Height="450" Width="900"
        MinWidth="900" MinHeight="450"
        MaxWidth="1000" MaxHeight="500"
        Icon="/Images/Ikony/Ikona_Hledani.ico">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Formulář -->
            <RowDefinition Height="70"/>
            <!-- Tlačítka -->
        </Grid.RowDefinitions>

        <!-- FORMULÁŘ – dvě sloupce -->
        <Grid Grid.Row="0">
            <Grid.Background>
                <ImageBrush Stretch="Fill" ImageSource="/Images/Img/pozadi_2_dialog_okna.png"/>
            </Grid.Background>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="2.3*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- Stav zápasu -->
            <TextBlock Text="Vyberte stav zápasu:" Grid.Row="0" Grid.Column="0"
                       VerticalAlignment="Center" HorizontalAlignment="Right"
                       Margin="10" FontFamily="Century Gothic" FontWeight="Bold" FontSize="15"/>
            <ComboBox x:Name="cbStav" Grid.Row="0" Grid.Column="1" Margin="45,13,45,13"
                      FontFamily="Century Gothic" FontSize="12" VerticalContentAlignment="Center" TabIndex="1"/>

            <!-- Datum od -->
            <TextBlock Text="Vyberte datum od:" Grid.Row="1" Grid.Column="0"
                       VerticalAlignment="Center" HorizontalAlignment="Right"
                       Margin="10" FontFamily="Century Gothic" FontWeight="Bold" FontSize="15"/>
            <DatePicker x:Name="dpDatumOd" Margin="45,13,45,13" FontFamily="Century Gothic" FontSize="12" TabIndex="2" Grid.Column="1" Grid.Row="1"/>

            <!-- Datum do -->
            <TextBlock Text="Vyberte datum do:" Grid.Row="2" Grid.Column="0"
           VerticalAlignment="Center" HorizontalAlignment="Right"
           Margin="10" FontFamily="Century Gothic" FontWeight="Bold" FontSize="15"/>
            <DatePicker x:Name="dpDatumDo" Grid.Row="2" Margin="45,13,45,13" FontFamily="Century Gothic" FontSize="12" TabIndex="3" Grid.Column="1"/>

            <!-- Výsledek -->
            <TextBlock x:Name="tblockVysledek" Text="Napište výsledek:" Grid.Row="3" Grid.Column="0"
                       VerticalAlignment="Center" HorizontalAlignment="Right"
                       Margin="10" FontFamily="Century Gothic" FontWeight="Bold" FontSize="15" ToolTipService.InitialShowDelay="200"   
                ToolTipService.ShowDuration="8000"
                ToolTipService.BetweenShowDelay="200">

                <TextBlock.ToolTip>
                    <ToolTip Style="{StaticResource CustomTooltip}">
                        <DockPanel Width="156" Height="50">
                            <TextBlock TextWrapping="Wrap">
                Výsledek se zapisuje jako:
                <LineBreak/><LineBreak/>
                <Run Text="Domácí" FontWeight="Bold"/>
                <Run Text=":" Foreground="OrangeRed"/>
                <Run Text="Hosté" FontWeight="Bold"/>
                            </TextBlock>
                        </DockPanel>
                    </ToolTip>
                </TextBlock.ToolTip>
            </TextBlock>
            <TextBox x:Name="tboxVysledek" Grid.Row="3" Margin="45,13,45,13" MaxLines="10" TextWrapping="Wrap" MaxLength="5" VerticalContentAlignment="Center" TabIndex="4" FontFamily="Century Gothic" FontSize="12" Grid.Column="1" GotFocus="TboxVysledek_GotFocus" LostFocus="TboxVysledek_LostFocus"/>

            <!-- Domácí tým -->
            <TextBlock Text="Vyberte domácí tým:" Grid.Row="4" Grid.Column="0"
                       VerticalAlignment="Center" HorizontalAlignment="Right"
                       Margin="10" FontFamily="Century Gothic" FontWeight="Bold" FontSize="15"/>
            <ComboBox x:Name="cbDomaciTym" Grid.Row="4" Grid.Column="1" Margin="45,13,45,13"
                       FontFamily="Century Gothic" FontSize="12" VerticalContentAlignment="Center" TabIndex="5"/>

            <!-- Hosté tým -->
            <TextBlock Text="Vyberte hosté tým:" Grid.Row="5" Grid.Column="0"
                VerticalAlignment="Center" HorizontalAlignment="Right"
                Margin="0,0,10,0" FontFamily="Century Gothic" FontWeight="Bold" FontSize="15"/>
            <ComboBox x:Name="cbHosteTym" Grid.Row="5" Grid.Column="1" Margin="45,13,45,13"
                FontFamily="Century Gothic" FontSize="12" VerticalContentAlignment="Center" TabIndex="6"/>

            <!-- Soutěž -->
            <TextBlock Text="Vyberte soutěž:" Grid.Row="6" Grid.Column="0"
                VerticalAlignment="Center" HorizontalAlignment="Right"
                Margin="0,0,10,0" FontFamily="Century Gothic" FontWeight="Bold" FontSize="15"/>
            <ComboBox x:Name="cbSoutez" Grid.Row="6" Grid.Column="1" Margin="45,13,45,13"
                FontFamily="Century Gothic" FontSize="12" VerticalContentAlignment="Center" TabIndex="7"/>
        </Grid>

        <!-- TLAČÍTKA -->
        <Border Grid.Row="1">
            <Border.Background>
                <ImageBrush ImageSource="/Images/Img/pozadi_3_dialog_okna.png"/>
            </Border.Background>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="btnNajdi" Content="Najdi"
                        Width="120" Height="35" Margin="0,10"
                        FontFamily="Century Gothic" FontSize="14"
                        Style="{StaticResource HoverFadeButtonStyle}" Click="BtnNajdi_Click" TabIndex="8"/>

                <Button x:Name="btnReset" Content="Reset"
                        Width="120" Height="35" Margin="40,10,0,10"
                        FontFamily="Century Gothic" FontSize="14"
                        Style="{StaticResource HoverFadeButtonStyle}" Click="BtnReset_Click" TabIndex="9">
                    <Button.Background>
                        <SolidColorBrush Color="#DDC5D709" Opacity="0.85"/>
                    </Button.Background>
                </Button>
            </StackPanel>
        </Border>

    </Grid>
</Window>
