<Window x:Class="BDAS2_Sem_Prace_Cincibus_Tluchor.Windows.Search_Dialogs.DialogNajdiBinarniObsah"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vyhledávání binárního obsahu"
        Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="/Images/Ikony/Ikona_Hledani.ico">

    <Grid>

        <!-- Pozadí -->
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Img/pozadi_2_dialog_okna.png" Stretch="Fill"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <!-- Formulář -->
        <Grid Margin="40" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="230"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="34"/>
                <RowDefinition Height="34"/>
                <RowDefinition Height="34"/>
                <RowDefinition Height="34"/>
                <RowDefinition Height="34"/>
                <RowDefinition Height="34"/>
                <RowDefinition Height="34"/>
            </Grid.RowDefinitions>

            <!-- Název souboru -->
            <TextBlock Text="Název souboru:" Grid.Row="0" Grid.Column="0"
                       VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="tboxNazev" Grid.Row="0" Height="26"
                     Grid.ColumnSpan="2" Margin="140,4,30,4"/>

            <!-- Typ souboru -->
            <TextBlock Text="Typ souboru (MIME):" Grid.Row="1" Grid.Column="0"
                       VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="tboxTyp" Grid.Row="1" Height="26"
                     Grid.ColumnSpan="2" Margin="140,4,30,4"/>

            <!-- Přípona -->
            <TextBlock Text="Přípona:" Grid.Row="2" Grid.Column="0"
                       VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="tboxPripona" Grid.Row="2" Height="26"
                     Grid.ColumnSpan="2" Margin="140,4,30,4"/>

            <!-- Operace -->
            <TextBlock Text="Operace:" Grid.Row="3" Grid.Column="0"
                       VerticalAlignment="Center" FontWeight="Bold"/>
            <ComboBox x:Name="cbOperace" Grid.Row="3" Height="26"
                      VerticalContentAlignment="Center"
                      Grid.ColumnSpan="2" Margin="140,4,30,4">
                <ComboBoxItem Content=""/>
                <ComboBoxItem Content="vlozeni"/>
                <ComboBoxItem Content="uprava"/>
            </ComboBox>

            <!-- Uživatel / Role -->
            <TextBlock Text="Uživatel / Role:" Grid.Row="4" Grid.Column="0"
                       VerticalAlignment="Center" FontWeight="Bold"/>
            <ComboBox x:Name="cbUzivatel" Grid.Row="4" Height="26"
                      VerticalContentAlignment="Center"
                      Grid.ColumnSpan="2" Margin="140,4,30,4">
                <ComboBoxItem Content=""/>
                <ComboBoxItem Content="Host"/>
                <ComboBoxItem Content="Admin"/>
                <ComboBoxItem Content="Uzivatel"/>
                <ComboBoxItem Content="Hrac"/>
                <ComboBoxItem Content="Trener"/>
            </ComboBox>

            <!-- Datum nahrání -->
            <TextBlock Text="Datum nahrání:" Grid.Row="5" Grid.Column="0"
                       VerticalAlignment="Center" FontWeight="Bold"/>
            <DatePicker x:Name="dpNahrani" Grid.Row="5" Height="26"
                        Grid.ColumnSpan="2" Margin="140,4,30,4"/>

            <!-- Datum změny -->
            <TextBlock Text="Datum změny:" Grid.Row="6" Grid.Column="0"
                       VerticalAlignment="Center" FontWeight="Bold"/>
            <DatePicker x:Name="dpZmeny" Grid.Row="6" Height="26"
                        Grid.ColumnSpan="2" Margin="140,4,30,4"/>

        </Grid>

        <!-- Tlacitka -->
        <Border Grid.Row="1">
            <Border.Background>
                <ImageBrush ImageSource="/Images/Img/pozadi_3_dialog_okna.png"/>
            </Border.Background>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <Button Content="Najdi" Width="130" Height="40"
                        Margin="20"
                        Style="{StaticResource HoverFadeButtonStyle}"
                        Click="BtnNajdi_Click"/>

                <Button Content="Reset" Width="130" Height="40"
                        Style="{StaticResource HoverFadeButtonStyle}"
                        Background="#DDC5D709"
                        Click="BtnReset_Click"/>

            </StackPanel>
        </Border>

    </Grid>
</Window>
