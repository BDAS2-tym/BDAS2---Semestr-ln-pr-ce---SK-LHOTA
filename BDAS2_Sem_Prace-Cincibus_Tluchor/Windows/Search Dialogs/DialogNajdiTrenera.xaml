<Window x:Class="BDAS2_Sem_Prace_Cincibus_Tluchor.Windows.Search_Dialogs.DialogNajdiTrenera"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vyhledávání trenéra"
        Height="500" Width="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="/Images/Ikony/Ikona_Treneri.ico">

    <Grid>
        <!-- POZADÍ -->
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Img/pozadi_2_dialog_okna.png" Stretch="Fill"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <!-- FORMULÁŘ -->
        <Grid Margin="40" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="34"/>
                <RowDefinition Height="34"/>
                <RowDefinition Height="34"/>
                <RowDefinition Height="34"/>
                <RowDefinition Height="34"/>
                <RowDefinition Height="34"/>
                <RowDefinition Height="34"/>
            </Grid.RowDefinitions>

            <!-- RODNÉ ČÍSLO -->
            <TextBlock Text="Rodné číslo:" Grid.Row="0" Grid.Column="0"
                       VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="tRodneCislo" Grid.Row="0" Grid.Column="1" Height="26" MaxLength="10"/>

            <!-- JMÉNO -->
            <TextBlock Text="Jméno:" Grid.Row="1" Grid.Column="0"
                       VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="tJmeno" Grid.Row="1" Grid.Column="1" Height="26" MaxLength="20"/>

            <!-- PŘÍJMENÍ -->
            <TextBlock Text="Příjmení:" Grid.Row="2" Grid.Column="0"
                       VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="tPrijmeni" Grid.Row="2" Grid.Column="1" Height="26" MaxLength="20"/>

            <!-- TELEFON -->
            <TextBlock Text="Telefon:" Grid.Row="3" Grid.Column="0"
                       VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="tTelefon" Grid.Row="3" Grid.Column="1" Height="26" MaxLength="12"/>

            <!-- LICENCE -->
            <TextBlock Text="Trenérská licence:" Grid.Row="4" Grid.Column="0"
                       VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="tLicence" Grid.Row="4" Grid.Column="1" Height="20" MaxLength="20"/>

            <!-- SPECIALIZACE -->
            <TextBlock Text="Specializace:" Grid.Row="5" Grid.Column="0"
                       VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="tSpecializace" Grid.Row="5" Grid.Column="1" Height="26" MaxLength="30"/>

            <!-- PRAXE -->
            <TextBlock Text="Počet let praxe:" Grid.Row="6" Grid.Column="0"
                       VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="tPraxe" Grid.Row="6" Grid.Column="1" Height="26" MaxLength="3"/>

        </Grid>

        <!-- TLAČÍTKA -->
        <Border Grid.Row="1">
            <Border.Background>
                <ImageBrush ImageSource="/Images/Img/pozadi_3_dialog_okna.png"/>
            </Border.Background>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <Button Content="Najdi" Width="130" Height="40"
                        Margin="20"
                        Style="{StaticResource HoverFadeButtonStyle}"
                        Click="BtnNajdi_Click"/>

                <Button Content="Reset" Width="130" Height="40"
                        Style="{StaticResource HoverFadeButtonStyle}"
                        Background="#DDC5D709"
                        Click="BtnReset_Click"/>

            </StackPanel>
        </Border>

    </Grid>
</Window>
