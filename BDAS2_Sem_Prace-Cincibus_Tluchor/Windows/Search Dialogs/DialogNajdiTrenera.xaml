<Window x:Class="BDAS2_Sem_Prace_Cincibus_Tluchor.Windows.Search_Dialogs.DialogNajdiTrenera"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vyhledávání trenéra"
        Height="500" Width="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="/Images/Ikony/Ikona_Hledani.ico">

    <Window.Resources>
        <!-- jen pro admin-only textboxy -->
        <Style x:Key="AdminOnlyTextBoxStyle" TargetType="TextBox">
            <Setter Property="Opacity" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Img/pozadi_2_dialog_okna.png" Stretch="Fill"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <!-- FORMULÁŘ -->
        <Grid Margin="40" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="34"/>
                <RowDefinition Height="34"/>
                <RowDefinition Height="34"/>
                <RowDefinition Height="34"/>
                <RowDefinition Height="34"/>
                <RowDefinition Height="34"/>
                <RowDefinition Height="34"/>
            </Grid.RowDefinitions>

            <!-- RODNÉ ČÍSLO -->
            <TextBlock Text="Rodné číslo:" Grid.Row="0" Grid.Column="0"
                       VerticalAlignment="Center" FontWeight="Bold"/>

            <TextBox Grid.Row="0" Grid.Column="1" Height="26" MaxLength="10" Margin="0,5,0,5" TabIndex="1"
                     Style="{StaticResource AdminOnlyTextBoxStyle}"
                     IsEnabled="{Binding CanFilterSensitive}"
                     ToolTip="{Binding RodneCisloToolTip}"
                     Text="{Binding RodneCislo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- JMÉNO -->
            <TextBlock Text="Jméno:" Grid.Row="1" Grid.Column="0"
                       VerticalAlignment="Center" FontWeight="Bold"/>

            <TextBox Grid.Row="1" Grid.Column="1" Height="26" MaxLength="20" Margin="0,5,0,5" TabIndex="2"
                     Text="{Binding Jmeno, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- PŘÍJMENÍ -->
            <TextBlock Text="Příjmení:" Grid.Row="2" Grid.Column="0"
                       VerticalAlignment="Center" FontWeight="Bold"/>

            <TextBox Grid.Row="2" Grid.Column="1" Height="26" MaxLength="20" Margin="0,5,0,5" TabIndex="3"
                     Text="{Binding Prijmeni, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- TELEFON -->
            <TextBlock Text="Telefon:" Grid.Row="3" Grid.Column="0"
                       VerticalAlignment="Center" FontWeight="Bold"/>

            <TextBox Grid.Row="3" Grid.Column="1" Height="26" MaxLength="12" Margin="0,5,0,5" TabIndex="4"
                     Style="{StaticResource AdminOnlyTextBoxStyle}"
                     IsEnabled="{Binding CanFilterSensitive}"
                     ToolTip="{Binding TelefonToolTip}"
                     Text="{Binding Telefon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- LICENCE -->
            <TextBlock Text="Trenérská licence:" Grid.Row="4" Grid.Column="0"
                       VerticalAlignment="Center" FontWeight="Bold"/>

            <TextBox Grid.Row="4" Grid.Column="1" Height="26" MaxLength="20" Margin="0,5,0,5" TabIndex="5"
                     Text="{Binding Licence, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- SPECIALIZACE -->
            <TextBlock Text="Specializace:" Grid.Row="5" Grid.Column="0"
                       VerticalAlignment="Center" FontWeight="Bold"/>

            <TextBox Grid.Row="5" Grid.Column="1" Height="26" MaxLength="30" Margin="0,5,0,5" TabIndex="6"
                     Text="{Binding Specializace, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- PRAXE -->
            <TextBlock Text="Počet let praxe:" Grid.Row="6" Grid.Column="0"
                       VerticalAlignment="Center" FontWeight="Bold"/>

            <TextBox Grid.Row="6" Grid.Column="1" Height="26" MaxLength="3" Margin="0,5,0,5" TabIndex="7"
                     Text="{Binding Praxe, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        </Grid>

        <!-- TLAČÍTKA -->
        <Border Grid.Row="1">
            <Border.Background>
                <ImageBrush ImageSource="/Images/Img/pozadi_3_dialog_okna.png"/>
            </Border.Background>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <Button Content="Najdi" Width="130" Height="40"
                        Margin="20"
                        Style="{StaticResource HoverFadeButtonStyle}"
                        Command="{Binding NajdiCommand}"
                        TabIndex="8"/>

                <Button Content="Reset" Width="130" Height="40"
                        Style="{StaticResource HoverFadeButtonStyle}"
                        Background="#DDC5D709"
                        Command="{Binding ResetCommand}"
                        TabIndex="9"/>

            </StackPanel>
        </Border>

    </Grid>
</Window>
