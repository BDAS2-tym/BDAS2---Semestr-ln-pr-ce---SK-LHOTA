<Window x:Class="BDAS2_Sem_Prace_Cincibus_Tluchor.Windows.Search_Dialogs.DialogNajdiUzivatelskeUcty"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vyhledávání uživatelských účtů"
        Height="400" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="/Images/Ikony/Ikona_Hledani.ico">

    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="/Images/Img/pozadi_2_dialog_okna.png" Stretch="Fill"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <!-- FORMULÁŘ -->
        <Grid Margin="40" Grid.Row="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="34"/>
                <RowDefinition Height="34"/>
                <RowDefinition Height="34"/>
                <RowDefinition Height="34"/>
                <RowDefinition Height="34"/>
            </Grid.RowDefinitions>

            <!-- UŽIVATELSKÉ JMÉNO -->
            <TextBlock Text="Uživatelské jméno:" Grid.Row="0" Grid.Column="0"
                       VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="tJmeno" Grid.Row="0" Grid.Column="1" Height="26"/>

            <!-- EMAIL -->
            <TextBlock Text="E-mail:" Grid.Row="1" Grid.Column="0"
                       VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="tEmail" Grid.Row="1" Grid.Column="1" Height="26"/>

            <!-- ROLE COMBOBOX -->
            <TextBlock Text="Role:" Grid.Row="2" Grid.Column="0"
                       VerticalAlignment="Center" FontWeight="Bold"/>

            <ComboBox x:Name="cbRole"
                      Grid.Row="2" Grid.Column="1"
                      Height="26"
                      SelectedIndex="-1">
                <ComboBoxItem Content="Hrac"/>
                <ComboBoxItem Content="Trener"/>
                <ComboBoxItem Content="Admin"/>
                <ComboBoxItem Content="Uživatel"/>
                <ComboBoxItem Content="Host"/>
            </ComboBox>

            <!-- RODNÉ ČÍSLO -->
            <TextBlock Text="Rodné číslo:" Grid.Row="3" Grid.Column="0"
                       VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="tRodneCislo" Grid.Row="3" Grid.Column="1" Height="26" MaxLength="10"/>

            <!-- POSLEDNÍ PŘIHLÁŠENÍ JEN DATUM -->
            <TextBlock Text="Poslední přihlášení:" Grid.Row="4" Grid.Column="0"
                       VerticalAlignment="Center" FontWeight="Bold"/>

            <DatePicker x:Name="dpPrihlaseniDatum"
                        Grid.Row="4" Grid.Column="1"
                        Height="26"
                        Width="150"/>

        </Grid>

        <!-- TLAČÍTKA -->
        <Border Grid.Row="1">
            <Border.Background>
                <ImageBrush ImageSource="/Images/Img/pozadi_3_dialog_okna.png"/>
            </Border.Background>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <Button Content="Najdi" Width="130" Height="40"
                        Margin="20"
                        Style="{StaticResource HoverFadeButtonStyle}"
                        Click="BtnNajdi_Click"/>

                <Button Content="Reset" Width="130" Height="40"
                        Style="{StaticResource HoverFadeButtonStyle}"
                        Background="#DDC5D709"
                        Click="BtnReset_Click"/>

            </StackPanel>
        </Border>

    </Grid>
</Window>
