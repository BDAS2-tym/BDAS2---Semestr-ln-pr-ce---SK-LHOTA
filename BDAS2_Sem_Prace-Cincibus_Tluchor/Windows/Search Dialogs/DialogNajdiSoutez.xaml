<Window x:Name="DialogHledaniSouteze" x:Class="BDAS2_Sem_Prace_Cincibus_Tluchor.Windows.Search_Dialogs.DialogNajdiSoutez"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDAS2_Sem_Prace_Cincibus_Tluchor.Windows"
        mc:Ignorable="d"
        Title="Vyhledávání soutěže" 
        Height="450" Width="900"
        MinWidth="900" MinHeight="450"
        MaxWidth="1000" MaxHeight="500"
        Icon="/Images/Ikony/Ikona_Hledani.ico">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Formulář -->
            <RowDefinition Height="70"/>
            <!-- Tlačítka -->
        </Grid.RowDefinitions>

        <!-- FORMULÁŘ – dvě sloupce -->
        <Grid Grid.Row="0">
            <Grid.Background>
                <ImageBrush Stretch="Fill" ImageSource="/Images/Img/pozadi_2_dialog_okna.png"/>
            </Grid.Background>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="2.3*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Typ soutěže -->
            <TextBlock Text="Vyberte typ soutěže:" Grid.Row="0" Grid.Column="0"
                       VerticalAlignment="Center" HorizontalAlignment="Right"
                       Margin="10" FontFamily="Century Gothic" FontWeight="Bold" FontSize="15"/>
            <ComboBox x:Name="cbSoutez" Grid.Row="0" Grid.Column="1" Margin="45,42,45,42"
                      FontFamily="Century Gothic" FontSize="12" VerticalContentAlignment="Center" TabIndex="1"/>

            <!-- Datum od -->
            <TextBlock Text="Vyberte datum začátku:" Grid.Row="1" Grid.Column="0"
                       VerticalAlignment="Center" HorizontalAlignment="Right"
                       Margin="10" FontFamily="Century Gothic" FontWeight="Bold" FontSize="15"/>
            <DatePicker x:Name="dpDatumZacatkuSouteze" Margin="45,42,45,42" FontFamily="Century Gothic" FontSize="12" TabIndex="2" Grid.Column="1" Grid.Row="1"/>

            <!-- Datum do -->
            <TextBlock Text="Vyberte datum konce:" Grid.Row="2" Grid.Column="0"
           VerticalAlignment="Center" HorizontalAlignment="Right"
           Margin="10" FontFamily="Century Gothic" FontWeight="Bold" FontSize="15"/>
            <DatePicker x:Name="dpDatumKonceSouteze" Grid.Row="2" Margin="45,42,45,42" FontFamily="Century Gothic" FontSize="12" TabIndex="3" Grid.Column="1"/>

        </Grid>

        <!-- TLAČÍTKA -->
        <Border Grid.Row="1">
            <Border.Background>
                <ImageBrush ImageSource="/Images/Img/pozadi_3_dialog_okna.png"/>
            </Border.Background>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="btnNajdi" Content="Najdi"
                        Width="120" Height="35" Margin="0,10"
                        FontFamily="Century Gothic" FontSize="14"
                        Style="{StaticResource HoverFadeButtonStyle}" Click="BtnNajdi_Click" TabIndex="4"/>

                <Button x:Name="btnReset" Content="Reset"
                        Width="120" Height="35" Margin="40,10,0,10"
                        FontFamily="Century Gothic" FontSize="14"
                        Style="{StaticResource HoverFadeButtonStyle}" Click="BtnReset_Click" TabIndex="5">
                    <Button.Background>
                        <SolidColorBrush Color="#DDC5D709" Opacity="0.85"/>
                    </Button.Background>
                </Button>
            </StackPanel>
        </Border>

    </Grid>
</Window>
