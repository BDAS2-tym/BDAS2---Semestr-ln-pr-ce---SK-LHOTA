<Window x:Name="DialogHledaniSponzora" x:Class="BDAS2_Sem_Prace_Cincibus_Tluchor.Windows.Search_Dialogs.DialogNajdiSponzora"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDAS2_Sem_Prace_Cincibus_Tluchor.Windows"
        mc:Ignorable="d"
        Title="Vyhledávání sponzora" 
        Height="450" Width="900"
        MinWidth="900" MinHeight="450"
        MaxWidth="1000" MaxHeight="500"
        Icon="/Images/Ikony/Ikona_Hledani.ico">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Formulář -->
            <RowDefinition Height="70"/>
            <!-- Tlačítka -->
        </Grid.RowDefinitions>

        <!-- FORMULÁŘ – dvě sloupce -->
        <Grid Grid.Row="0">
            <Grid.Background>
                <ImageBrush Stretch="Fill" ImageSource="/Images/Img/pozadi_2_dialog_okna.png"/>
            </Grid.Background>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="2.3*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Člen -->
            <TextBlock Text="Vyberte člena:" Grid.Row="0" Grid.Column="0"
                       VerticalAlignment="Center" HorizontalAlignment="Right"
                       Margin="10" FontFamily="Century Gothic" FontWeight="Bold" FontSize="15"/>
            <ComboBox x:Name="cbClen" Grid.Row="0" Grid.Column="1" Margin="45,28,45,28"
                      FontFamily="Century Gothic" FontSize="12" VerticalContentAlignment="Center" TabIndex="1"/>


            <!-- Soutěž -->
            <TextBlock Text="Vyberte soutěž:" Grid.Row="1" Grid.Column="0"
                        VerticalAlignment="Center" HorizontalAlignment="Right"
                        Margin="10" FontFamily="Century Gothic" FontWeight="Bold" FontSize="15"/>
            <ComboBox x:Name="cbSoutez" Grid.Row="1" Grid.Column="1" Margin="45,28,45,28"
                        FontFamily="Century Gothic" FontSize="12" VerticalContentAlignment="Center" TabIndex="2"/>

            <!-- Sponzor -->
            <TextBlock Text="Napište sponzora:" Grid.Row="2" Grid.Column="0"
                       VerticalAlignment="Center" HorizontalAlignment="Right"
                       Margin="10" FontFamily="Century Gothic" FontWeight="Bold" FontSize="15"/>
            <TextBox x:Name="tboxJmenoSponzora" Grid.Row="2" Margin="45,28,45,28" MaxLines="10" TextWrapping="Wrap" MaxLength="30" VerticalContentAlignment="Center" TabIndex="3" FontFamily="Century Gothic" FontSize="12" Grid.Column="1"/>

            <!-- Sponzorovaná částka -->
            <TextBlock Text="Vyberte sponzorovanou částku:" Grid.Row="3" Grid.Column="0"
                       VerticalAlignment="Center" HorizontalAlignment="Right"
                       Margin="10" FontFamily="Century Gothic" FontWeight="Bold" FontSize="15"/>
            <Grid Grid.Column="1" Grid.Row="3" Margin="45,5,45,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.5*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <xctk:RangeSlider x:Name="slCastka"
                    Grid.Row="0" Grid.Column="0"
                    Minimum="0"
                    Maximum="1000000"
                    LowerValue="0" HigherValue="1000000" VerticalAlignment="Top" Margin="0" FontFamily="Century Gothic" TabIndex="6" TickFrequency="100000" TickPlacement="BottomRight"/>

                <TextBlock Grid.Row="1" Grid.Column="0"
                    Text="{Binding ElementName=slCastka, Path=LowerValue, StringFormat='Od: {0:0} Kč'}"
                    FontFamily="Century Gothic" FontSize="12"
                    HorizontalAlignment="Left"/>

                <TextBlock Grid.Row="1" Grid.Column="1"
                    Text="{Binding ElementName=slCastka, Path=HigherValue, StringFormat='Do: {0:0} Kč'}"
                    FontFamily="Century Gothic" FontSize="12"
                    HorizontalAlignment="Right"/>
            </Grid>
        </Grid>

        <!-- TLAČÍTKA -->
        <Border Grid.Row="1">
            <Border.Background>
                <ImageBrush ImageSource="/Images/Img/pozadi_3_dialog_okna.png"/>
            </Border.Background>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="btnNajdi" Content="Najdi"
                        Width="120" Height="35" Margin="0,10"
                        FontFamily="Century Gothic" FontSize="14"
                        Style="{StaticResource HoverFadeButtonStyle}" Click="BtnNajdi_Click"/>

                <Button x:Name="btnReset" Content="Reset"
                        Width="120" Height="35" Margin="40,10,0,10"
                        FontFamily="Century Gothic" FontSize="14"
                        Style="{StaticResource HoverFadeButtonStyle}" Click="BtnReset_Click">
                    <Button.Background>
                        <SolidColorBrush Color="#DDC5D709" Opacity="0.85"/>
                    </Button.Background>
                </Button>
            </StackPanel>
        </Border>

    </Grid>
</Window>
