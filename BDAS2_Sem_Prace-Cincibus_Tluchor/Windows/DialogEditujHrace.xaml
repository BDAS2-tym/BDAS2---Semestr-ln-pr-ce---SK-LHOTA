<Window 
        x:Class="BDAS2_Sem_Prace_Cincibus_Tluchor.Windows.DialogEditujHrace"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Editování hráče"
        Height="672" Width="562"
        MinWidth="562" MinHeight="672" MaxWidth="620" MaxHeight="730"
        Icon="/Images/Ikony/Ikona_Okna_Pridani.ico">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Logo sekce -->
        <Border Grid.Row="0" Padding="10">
            <Border.Background>
                <ImageBrush ImageSource="/Images/Img/pozadi_1_dialog_okna.png" Stretch="UniformToFill"/>
            </Border.Background>
            <Image Source="/Images/Img/Logo_SK_Lhota.png" HorizontalAlignment="Center" Height="100"/>
        </Border>

        <!-- Formulář se scrollbarem -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.Background>
                    <ImageBrush Stretch="Fill" ImageSource="/Images/Img/pozadi_2_dialog_okna.png"/>
                </Grid.Background>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- Rodné číslo -->
                <TextBlock Text="Rodné číslo:" Grid.Row="0" Grid.Column="0"
                           Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontFamily="Century Gothic" FontSize="14" FontWeight="Bold"/>
                <TextBox x:Name="tboxRodneCislo" Grid.Row="0" Grid.Column="1"
                         Margin="50,18,50,18" MaxLength="10" FontFamily="Century Gothic" FontSize="12" TabIndex="1"/>

                <!-- Jméno -->
                <TextBlock Text="Jméno:" Grid.Row="1" Grid.Column="0"
                           Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontFamily="Century Gothic" FontSize="14" FontWeight="Bold"/>
                <TextBox x:Name="tboxJmeno" Grid.Row="1" Grid.Column="1"
                         Margin="50,18,50,18" MaxLength="20" FontFamily="Century Gothic" FontSize="12" TabIndex="2"/>

                <!-- Příjmení -->
                <TextBlock Text="Příjmení:" Grid.Row="2" Grid.Column="0"
                           Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontFamily="Century Gothic" FontSize="14" FontWeight="Bold"/>
                <TextBox x:Name="tboxPrijmeni" Grid.Row="2" Grid.Column="1"
                         Margin="50,18,50,18" MaxLength="20" FontFamily="Century Gothic" FontSize="12" TabIndex="3"/>

                <!-- Telefon -->
                <TextBlock Text="Telefonní číslo:" Grid.Row="3" Grid.Column="0"
                           Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontFamily="Century Gothic" FontSize="14" FontWeight="Bold"/>
                <TextBox x:Name="tboxTelCislo" Grid.Row="3" Grid.Column="1"
                           Margin="50,18,50,18" MaxLength="12"
                           FontFamily="Century Gothic" FontSize="12" TabIndex="4"/>

                <!-- Pozice -->
                <TextBlock Text="Pozice na hřišti:" Grid.Row="4" Grid.Column="0"
                           Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontFamily="Century Gothic" FontSize="14" FontWeight="Bold"/>
                <ComboBox x:Name="cbPozice" Grid.Row="4" Grid.Column="1"
                          Margin="50,18,50,18" FontFamily="Century Gothic" FontSize="12"
                          MaxDropDownHeight="230" TabIndex="5"/>

                <!-- Góly -->
                <TextBlock Text="Počet vstřelených gólů:" Grid.Row="5" Grid.Column="0"
                           Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontFamily="Century Gothic" FontSize="14" FontWeight="Bold"/>
                <xctk:IntegerUpDown x:Name="iudPocetGolu" Grid.Row="5" Grid.Column="1"
                                    Margin="50,18,50,18" Minimum="0" Maximum="100"
                                    FontFamily="Century Gothic" FontSize="12" TabIndex="6"/>

                <!-- Žluté karty -->
                <TextBlock Text="Počet žlutých karet:" Grid.Row="6" Grid.Column="0"
                           Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontFamily="Century Gothic" FontSize="14" FontWeight="Bold"/>
                <xctk:IntegerUpDown x:Name="iudPocetZlutychKaret" Grid.Row="6" Grid.Column="1"
                                    Margin="50,18,50,18" Minimum="0" Maximum="100"
                                    FontFamily="Century Gothic" FontSize="12" TabIndex="7"/>

                <!-- Červené karty -->
                <TextBlock Text="Počet červených karet:" Grid.Row="7" Grid.Column="0"
                           Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontFamily="Century Gothic" FontSize="14" FontWeight="Bold"/>
                <xctk:IntegerUpDown x:Name="iudPocetCervenychKaret" Grid.Row="7" Grid.Column="1"
                                    Margin="50,17,50,17" Minimum="0" Maximum="100"
                                    FontFamily="Century Gothic" FontSize="12" IsTabStop="False" TabIndex="8"/>

                <!-- Checkbox disciplinární opatření -->
                <CheckBox x:Name="chkMaOpatreni" Grid.Row="8" Grid.ColumnSpan="2"
                          Content="Hráč má disciplinární opatření"
                          Margin="50,5,0,5"
                          FontFamily="Century Gothic"
                          FontSize="14"
                          FontWeight="Bold"
                          Checked="chkMaOpatreni_Checked"
                          Unchecked="chkMaOpatreni_Unchecked" TabIndex="9"/>

                <!-- Panel opatření -->
                <StackPanel x:Name="spOpatreni" Grid.Row="9" Grid.ColumnSpan="2"
                            Orientation="Vertical"
                            Margin="80,5,80,20"
                            Visibility="Collapsed">

                    <TextBlock Text="Datum opatření:"
                               Margin="0,5,0,0"
                               FontFamily="Century Gothic"
                               FontSize="13"
                               FontWeight="Bold"/>

                    <DatePicker x:Name="dpDatumOpatreni"
                                Margin="0,5,0,10"
                                FontFamily="Century Gothic"
                                FontSize="12"/>

                    <TextBlock Text="Délka trestu (dny):"
                               FontFamily="Century Gothic"
                               FontSize="13"
                               FontWeight="Bold"/>

                    <xctk:IntegerUpDown x:Name="iudDelkaTrestu"
                                        Margin="0,5,0,10"
                                        Minimum="1"
                                        Maximum="365"
                                        Value="1"
                                        FontFamily="Century Gothic"
                                        FontSize="12"
                                        HorizontalAlignment="Left"
                                        Width="120"/>

                    <TextBlock Text="Důvod opatření (volitelné):"
                               FontFamily="Century Gothic"
                               FontSize="13"
                               FontWeight="Bold"/>

                    <TextBox x:Name="tboxDuvodOpatreni"
                             Margin="0,5,0,10"
                             Width="250"
                             FontFamily="Century Gothic"
                             FontSize="12"
                             ToolTip="Zadejte důvod disciplinárního opatření (nepovinné)"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Tlačítka -->
        <Border Grid.Row="2">
            <Border.Background>
                <ImageBrush ImageSource="/Images/Img/pozadi_3_dialog_okna.png"/>
            </Border.Background>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="btnEdituj" Click="BtnEdituj_Click"
                        Content="Edituj" Width="100" Padding="5" Margin="0,5,0,5"
                        FontFamily="Century Gothic" FontSize="14"
                        Style="{StaticResource HoverFadeButtonStyle}" TabIndex="10"/>

                <Button x:Name="btnZrus" Content="Zruš" Width="100" Padding="5" Margin="100,5,0,5"
                        FontFamily="Century Gothic" FontSize="14"
                        Style="{StaticResource HoverFadeButtonStyle}"
                        Click="BtnUkonci_Click" TabIndex="11">
                    <Button.Background>
                        <SolidColorBrush Color="#DDC5D709" Opacity="0.85"/>
                    </Button.Background>
                    <Button.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF9AE818"/>
                            <GradientStop Color="#DD97F60F" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.BorderBrush>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
