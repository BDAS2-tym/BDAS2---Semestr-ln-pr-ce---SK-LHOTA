<Window x:Class="BDAS2_Sem_Prace_Cincibus_Tluchor.Windows.EditUzivatelOkno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editace uživatele"
        Height="650" Width="900"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">

    <Border CornerRadius="12">
        <Border CornerRadius="10" BorderThickness="2" Opacity="0.95">

            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="Aqua" Offset="0"/>
                    <GradientStop Color="#DA34AE" Offset="0.75"/>
                    <GradientStop Color="#8A16C1" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#5D1FA3" Offset="0"/>
                    <GradientStop Color="#2E004B" Offset="0.5"/>
                    <GradientStop Color="#C71585" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!-- Horní lišta -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="EDITACE UŽIVATELE"
                               Foreground="DarkGray"
                               FontSize="12"
                               FontFamily="Montserrat"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>

                    <!-- Minimize -->
                    <Button x:Name="btnMinimize"
                            BorderThickness="0"
                            Content="-"
                            Foreground="White"
                            FontSize="16"
                            Cursor="Hand"
                            Grid.Column="1"
                            Click="BtnMinimize_Click"
                            Background="Gray">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Gray"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9" Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Close -->
                    <Button x:Name="btnClose"
                            BorderThickness="0"
                            Content="X"
                            Foreground="White"
                            FontSize="12"
                            Cursor="Hand"
                            Grid.Column="2"
                            Click="BtnClose_Click"
                            Background="Gray">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Gray"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9" Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <!-- Tělo okna -->
                <StackPanel Grid.Row="1" Width="280" Orientation="Vertical"
                            HorizontalAlignment="Center" Margin="0,35,0,0">

                    <Image Source="/Images/Ikony/Ikona_Uzivatel.png"
                           Width="120" Height="120" Margin="0,0,0,30"/>

                    <!-- Uživatelské jméno -->
                    <TextBlock Text="Uživatelské jméno" Foreground="DarkGray"/>
                    <TextBox x:Name="txtUser" Height="28" Foreground="White"
                             BorderThickness="0,0,0,2" BorderBrush="DarkGray" Background="Transparent"/>

                    <!-- Email -->
                    <TextBlock Text="E-mail" Foreground="DarkGray" Margin="0,15,0,0"/>
                    <TextBox x:Name="txtEmail" Height="28" Foreground="White"
                             BorderThickness="0,0,0,2" BorderBrush="DarkGray" Background="Transparent"/>

                    <!-- Heslo -->
                    <TextBlock Text="Heslo (volitelné)" Foreground="DarkGray" Margin="0,15,0,0"/>
                    <TextBox x:Name="txtHeslo" Height="28" Foreground="White"
                             BorderThickness="0,0,0,2" BorderBrush="DarkGray"
                             Background="Transparent" VerticalContentAlignment="Center"/>

                    <!-- Rodné číslo -->
                    <TextBlock x:Name="lblRodne" Text="Rodné číslo" Foreground="DarkGray" Margin="0,15,0,0"/>
                    <TextBox x:Name="txtRodneCislo" Height="28" Foreground="White"
                             BorderThickness="0,0,0,2" BorderBrush="DarkGray" Background="Transparent"/>

                    <!-- Role -->
                    <TextBlock Text="Role" Foreground="DarkGray" Margin="0,15,0,0"/>
                    <ComboBox x:Name="cmbRole"
                              Height="30"
                              SelectionChanged="cmbRole_SelectionChanged"
                              FontFamily="Montserrat"
                              FontSize="13"
                              Foreground="Black"
                              Background="White"
                              BorderBrush="Gray"
                              BorderThickness="1"
                              Padding="4"
                              Cursor="Hand"
                              HorizontalContentAlignment="Left"
                              VerticalContentAlignment="Center"/>

                    <!-- Save -->
                    <Button x:Name="btnSave" Content="ULOŽIT ZMĚNY"
                            Click="BtnSave_Click"
                            Width="160" Height="40" Margin="0,30,0,0"
                            Background="#462AD8" Foreground="White"
                            FontSize="14" FontFamily="Montserrat"
                            Cursor="Hand" BorderThickness="0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#462AD8"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#28AEED"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="160" Height="40" CornerRadius="20" Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>
