<Window x:Class="BDAS2_Sem_Prace_Cincibus_Tluchor.Windows.DialogVazebniTabulkaClenove"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDAS2_Sem_Prace_Cincibus_Tluchor.Windows"
        mc:Ignorable="d"
        Title="Editace sponzorovaných členů" Height="450" Width="800" MinWidth="600" MinHeight="330" MaxWidth="980" MaxHeight="580" Icon="/Images/Ikony/Ikona_Okna_Editovani.ico">
    <Grid Margin="0">
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Img/pozadi_2_dialog_okna.png"/>
        </Grid.Background>
        <!-- Hlavní struktura: dvě tabulky vedle sebe, dole tlačítka -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Tabulky -->
            <RowDefinition Height="50" />
            <!-- Tlačítka dole -->
        </Grid.RowDefinitions>


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- Levá tabulka -->
            <ColumnDefinition Width="40" />
            <!-- Mezera -->
            <ColumnDefinition Width="*" />
            <!-- Pravá tabulka -->
        </Grid.ColumnDefinitions>


        <!-- Levá tabulka - TABULKA VŠECH -->
        <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <!-- Nadpis -->
                    <RowDefinition Height="*" />
                    <!-- Tabulka -->
                    <RowDefinition Height="Auto" />
                    <!-- Tlačítko PŘESUŇ -->
                </Grid.RowDefinitions>

                <TextBlock x:Name="tblockVsechny" Grid.Row="0" Text="VŠICHNI ČLENOVÉ" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,4,0,6" FontFamily="Century Gothic"/>

                <Border Grid.Row ="1" BorderBrush="#FF125C64" BorderThickness="2,2,2,2" Grid.Column="0" CornerRadius="5,5,5,5" Margin="2,0,2,0">
                    <DataGrid x:Name="gridVsechny" ItemsSource="{Binding VsichniClenove}" FontFamily="Century Gothic" FontSize="11" BorderBrush="#125C64" AlternatingRowBackground="#FFE0E0E0" AutomationProperties.IsColumnHeader="True" RowBackground="#FFF3F3F3" RowHeight="25" HeadersVisibility="Column" ColumnHeaderHeight="18" GridLinesVisibility="None" IsReadOnly="True"
                        CanUserAddRows="False" AutoGenerateColumns="False" PreviewKeyDown="gridVsechny_PreviewKeyDown">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Jmeno}" FontFamily="Century Gothic" FontSize="11" Header="Jméno" Width="*" ElementStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding Prijmeni}" FontFamily="Century Gothic" FontSize="11" Header="Příjmení" Width="*" ElementStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding RodneCislo}" FontFamily="Century Gothic" FontSize="11" Header="Rodné číslo" Width="*" ElementStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <!-- Tento kód platí pouze pro poslední sloupec hlavičky, aby se zrušilo ohraničení na pravé straně -->
                                    <Style TargetType="{x:Type DataGridColumnHeader}">
                                        <!-- Pozadí -->
                                        <Setter Property="Background" Value="#AABBCC"/>

                                        <!-- Barva textu -->
                                        <Setter Property="Foreground" Value="Black"/>

                                        <!-- Font -->
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="10"/>
                                        <Setter Property="FontFamily" Value="Century Gothic"/>

                                        <!-- Vycentrování textu -->
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>

                                        <!-- Ohraničení -->
                                        <Setter Property="BorderBrush" Value="#125C64"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <!-- Pozadí -->
                                <Setter Property="Background" Value="#AABBCC"/>

                                <!-- Barva textu -->
                                <Setter Property="Foreground" Value="Black"/>

                                <!-- Font -->
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="10"/>
                                <Setter Property="FontFamily" Value="Century Gothic"/>

                                <!-- Vycentrování textu -->
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>

                                <!-- Ohraničení -->
                                <Setter Property="BorderBrush" Value="#125C64"/>
                                <Setter Property="BorderThickness" Value="0,0,2,2"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFE8FFFF" Offset="1"/>
                                <GradientStop Color="#FFF3F3F3" Offset="0"/>
                            </LinearGradientBrush>
                        </DataGrid.Background>

                        <DataGrid.Resources>

                            <!-- Změna barvy pozadí -->
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#fad870"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#fad870"/>

                            <!-- Změna barvy písma-->
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black"/>
                        </DataGrid.Resources>
                    </DataGrid>
                </Border>

                <Button x:Name="btnPresunVsechny" Grid.Row="2" Content="Přesuň" Width="100" Height="30" HorizontalAlignment="Center" Margin="0,10,0,0" Style="{StaticResource HoverFadeButtonStyle3}" FontSize="14" TabIndex="1" Click="btnPresunVsechny_Click"/>
            </Grid>
        </Border>


        <!-- Pravá tabulka - TABULKA VYBRANÝCH -->
        <Border Grid.Row="0" Grid.Column="2" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>


                <TextBlock x:Name="tblockVazby" Grid.Row="0" Text="SPONZOROVANÍ ČLENOVÉ" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,4,0,6" FontFamily="Century Gothic"/>

                <Border Grid.Row ="1" BorderBrush="#FF125C64" BorderThickness="2,2,2,2" Grid.Column="0" CornerRadius="5,5,5,5" Margin="2,0,2,0">
                    <DataGrid x:Name="gridVazby" ItemsSource="{Binding VybraniClenove}" FontFamily="Century Gothic" FontSize="11" BorderBrush="#125C64" AlternatingRowBackground="#FFE0E0E0" AutomationProperties.IsColumnHeader="True" RowBackground="#FFF3F3F3" RowHeight="25" HeadersVisibility="Column" ColumnHeaderHeight="18" GridLinesVisibility="None" IsReadOnly="True"
        CanUserAddRows="False" AutoGenerateColumns="False" PreviewKeyDown="gridVazby_PreviewKeyDown">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Jmeno}" FontFamily="Century Gothic" FontSize="11" Header="Jméno" Width="*" ElementStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding Prijmeni}" FontFamily="Century Gothic" FontSize="11" Header="Příjmení" Width="*" ElementStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding RodneCislo}" FontFamily="Century Gothic" FontSize="11" Header="Rodné číslo" Width="*" ElementStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <!-- Tento kód platí pouze pro poslední sloupec hlavičky, aby se zrušilo ohraničení na pravé straně -->
                                    <Style TargetType="{x:Type DataGridColumnHeader}">
                                        <!-- Pozadí -->
                                        <Setter Property="Background" Value="#AABBCC"/>

                                        <!-- Barva textu -->
                                        <Setter Property="Foreground" Value="Black"/>

                                        <!-- Font -->
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="10"/>
                                        <Setter Property="FontFamily" Value="Century Gothic"/>

                                        <!-- Vycentrování textu -->
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>

                                        <!-- Ohraničení -->
                                        <Setter Property="BorderBrush" Value="#125C64"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <!-- Pozadí -->
                                <Setter Property="Background" Value="#AABBCC"/>

                                <!-- Barva textu -->
                                <Setter Property="Foreground" Value="Black"/>

                                <!-- Font -->
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="10"/>
                                <Setter Property="FontFamily" Value="Century Gothic"/>

                                <!-- Vycentrování textu -->
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>

                                <!-- Ohraničení -->
                                <Setter Property="BorderBrush" Value="#125C64"/>
                                <Setter Property="BorderThickness" Value="0,0,2,2"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFE8FFFF" Offset="1"/>
                                <GradientStop Color="#FFF3F3F3" Offset="0"/>
                            </LinearGradientBrush>
                        </DataGrid.Background>

                        <DataGrid.Resources>

                            <!-- Změna barvy pozadí -->
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#fad870"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#fad870"/>

                            <!-- Změna barvy písma-->
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black"/>
                        </DataGrid.Resources>
                    </DataGrid>
                </Border>


                <Button x:Name="btnPresunVazby" Grid.Row="2" Content="Přesuň" Width="100" Height="30" HorizontalAlignment="Center" Margin="0,8,0,0" Style="{StaticResource HoverFadeButtonStyle3}" FontSize="14" TabIndex="2" Click="btnPresunVazby_Click"/>
            </Grid>
        </Border>


        <!-- Spodní tlačítka -->
        <Grid Grid.Row="1" Grid.ColumnSpan="3">
            <Grid.Background>
                <ImageBrush ImageSource="/Images/Img/pozadi_3_dialog_okna.png" Stretch="None"/>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,10" Height="49" VerticalAlignment="Top" HorizontalAlignment="Right">
                <Button x:Name="btnOk" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" FontFamily="Century Gothic" FontSize="16" Padding="5,5,5,5" VerticalContentAlignment="Center" Margin="0,10,50,0" Style="{StaticResource HoverFadeButtonStyle}" TabIndex="3" Click="btnOk_Click">OK</Button>
            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,10" HorizontalAlignment="Left" VerticalAlignment="Top" Height="50">
                <Button x:Name="btnZrusit" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" FontFamily="Century Gothic" FontSize="16" Padding="5,5,5,5" VerticalContentAlignment="Center" Margin="50,10,0,0" Style="{StaticResource HoverFadeButtonStyle}" TabIndex="4" Click="btnZrusit_Click">Zrušit</Button>
            </StackPanel>

        </Grid>
        <Rectangle Grid.Column="1" Stroke="#FFD9354C" Width="3" Fill="#FFD9354C" Margin="0,25,0,25"/>


    </Grid>
</Window>
