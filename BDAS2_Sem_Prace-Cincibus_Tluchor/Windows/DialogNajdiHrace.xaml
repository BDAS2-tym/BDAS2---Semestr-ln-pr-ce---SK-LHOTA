<Window x:Class="BDAS2_Sem_Prace_Cincibus_Tluchor.Windows.DialogNajdiHrace"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hledání hráče"
        Height="250" Width="500"
        MinHeight="300" MinWidth="600"
        MaxHeight="300" MaxWidth="600"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Icon="/Images/Ikony/Ikona_Hraci.ico">

    <Grid>
        <!-- Oranžové pozadí obrázkem -->
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Img/pozadi_2_dialog_okna.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Obsah -->
            <RowDefinition Height="60"/>
            <!-- Tlačítka -->
        </Grid.RowDefinitions>

        <!-- Obsah: Label + TextBox -->
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <TextBlock Text="Zadejte rodné číslo hráče:" 
               FontSize="18" FontWeight="Bold" 
               Foreground="Black"
               HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBox x:Name="tboxRodneCislo" Width="200" Height="30" FontSize="14"
             HorizontalAlignment="Center" MaxLength="10"/>
        </StackPanel>


        <!-- Tlačítka -->
        <Border x:Name="borderTlacitka" Grid.Row="1">
            <Border.Background>
                <ImageBrush ImageSource="/Images/Img/pozadi_3_dialog_okna.png"/>
            </Border.Background>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Najdi -->
                <Button x:Name="btnNajdi" Content="Najdi" Width="100" Padding="5" Margin="0,5,0,5"
                        FontFamily="Century Gothic" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"
                        Style="{StaticResource HoverFadeButtonStyle}" Click="BtnNajdi_Click"/>

                <!-- Ukonči -->
                <Button x:Name="btnZrusit" Content="Ukonči" Width="100" Padding="5" Margin="50,5,0,5"
                        FontFamily="Century Gothic" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"
                        Style="{StaticResource HoverFadeButtonStyle}" Click="btnZrusit_Click">
                    <Button.Background>
                        <SolidColorBrush Color="#DDC5D709" Opacity="0.85"/>
                    </Button.Background>
                    <Button.BorderBrush>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#FF9AE818"/>
                            <GradientStop Color="#DD97F60F" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.BorderBrush>
                </Button>
            </StackPanel>
        </Border>

    </Grid>
</Window>
