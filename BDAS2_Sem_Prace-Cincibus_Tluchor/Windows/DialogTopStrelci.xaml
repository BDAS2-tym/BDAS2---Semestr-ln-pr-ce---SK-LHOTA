<Window x:Class="BDAS2_Sem_Prace_Cincibus_Tluchor.Windows.DialogTopStrelci"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TOP střelci"
        Height="420" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="/Images/Ikony/Ikona_Hraci.ico">

    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="/Images/Img/pozadi_2_dialog_okna.png" Stretch="Fill"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!-- DATAGRID -->
        <Border Grid.Row="0" Margin="20" BorderBrush="#125C64" BorderThickness="2" CornerRadius="6">
            <DataGrid x:Name="dgTopStrelci"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      FontFamily="Century Gothic"
                      FontSize="13"
                      AlternatingRowBackground="#FFF0F0F0"
                      RowHeight="30"
                      HeadersVisibility="Column">

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#AABBCC"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="FontFamily" Value="Century Gothic"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="BorderBrush" Value="#125C64"/>
                        <Setter Property="BorderThickness" Value="0,0,2,2"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Jméno" Binding="{Binding Jmeno}" Width="*" />
                    <DataGridTextColumn Header="Příjmení" Binding="{Binding Prijmeni}" Width="*" />
                    <DataGridTextColumn Header="Góly" Binding="{Binding PocetGolu}" Width="*" />
                    <DataGridTextColumn Header="Pozice" Binding="{Binding Pozice}" Width="*" />
                    <DataGridTextColumn Header="Pořadí" Binding="{Binding Poradi}" Width="*" />
                </DataGrid.Columns>

            </DataGrid>
        </Border>

        <!-- TLAČÍTKO OK -->
        <Border Grid.Row="1">
            <Border.Background>
                <ImageBrush ImageSource="/Images/Img/pozadi_3_dialog_okna.png"/>
            </Border.Background>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="OK"
                        Width="130" Height="40"
                        Style="{StaticResource HoverFadeButtonStyle}"
                        Click="BtnOk_Click"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
