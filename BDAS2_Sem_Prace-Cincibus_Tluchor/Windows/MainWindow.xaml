<Window x:Class="BDAS2_Sem_Prace_Cincibus_Tluchor.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Informační systém SK Lhota"
        WindowStartupLocation="CenterScreen"
        Width="1200" Height="700">

    <!-- Hlavní rozdělení -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- horní pruh -->
            <RowDefinition Height="*"/>
            <!-- levé menu + obsah -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- levé menu -->
            <ColumnDefinition Width="*"/>
            <!-- obsah -->
        </Grid.ColumnDefinitions>

        <!-- Horní pruh -->
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                Background="#1565C0" Padding="15">
            <Grid>
                <TextBlock Text=""
                           Foreground="White"
                           FontSize="24"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           FontFamily="Century Gothic"/>
            </Grid>
        </Border>

        <!-- Levé menu -->
        <Border Grid.Row="1" Grid.Column="0" Background="#77B3FB">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- logo + název -->
                    <RowDefinition Height="*"/>
                    <!-- tlačítka -->
                </Grid.RowDefinitions>

                <!-- Logo + název -->
                <StackPanel Grid.Row="0" Margin="10">
                    <Image Source="/Logo_SK_Lhota.png"
                           MinHeight="50" MaxHeight="120"
                           HorizontalAlignment="Center"
                           Stretch="Uniform"/>
                    <TextBlock Text="SK Lhota"
                               Foreground="Black"
                               FontSize="22"
                               FontWeight="Bold"
                               Margin="0,10"
                               HorizontalAlignment="Center"
                               FontFamily="Century Gothic"/>
                </StackPanel>

                <!-- Tlačítka -->
                <Grid Grid.Row="1" Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Styl -->
                    <Grid.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#77B3FB"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="FontFamily" Value="Century Gothic"/>
                            <Setter Property="FontSize" Value="19"/>
                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="Padding" Value="12,0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#111827"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Resources>

                    <!-- Hráči -->
                    <Button Grid.Row="0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Source="/player.png" Width="26" Height="26" Margin="0,0,10,0"/>
                            <TextBlock Text="Hráči" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Trenéři -->
                    <Button Grid.Row="1">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Source="/coach.png" Width="26" Height="26" Margin="0,0,10,0"/>
                            <TextBlock Text="Trenéři" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Tréninky -->
                    <Button Grid.Row="2">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Source="/training.png" Width="26" Height="26" Margin="0,0,10,0"/>
                            <TextBlock Text="Tréninky" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Kontrakty -->
                    <Button Grid.Row="3">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Source="/contract.png" Width="26" Height="26" Margin="0,0,10,0"/>
                            <TextBlock Text="Kontrakty" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Opatření -->
                    <Button Grid.Row="4">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Source="/red_card.png" Width="26" Height="26" Margin="0,0,10,0"/>
                            <TextBlock Text="Opatření" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Graf -->
                    <Button Grid.Row="5">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Source="/graph_icon.png" Width="26" Height="26" Margin="0,0,10,0"/>
                            <TextBlock Text="Graf" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Odhlásit -->
                    <Button Grid.Row="6">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Source="/logout.png" Width="26" Height="26" Margin="0,0,10,0"/>
                            <TextBlock Text="Odhlásit" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Exit -->
                    <Button Grid.Row="7">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Source="/left_icon.png" Width="26" Height="26" Margin="0,0,10,0"/>
                            <TextBlock Text="Exit" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <!-- Obsah -->
        <Grid Grid.Row="1" Grid.Column="1" Background="#FFFFFF" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Box Čas -->
            <Border Grid.Row="0" Grid.Column="0" Margin="15"
                    Background="#FFCC80" CornerRadius="35"
                    MinWidth="300" MinHeight="150"
                    MaxHeight="180"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                    <Image Source="/clock_icon.png" Width="50" Height="50" Margin="0,0,12,0"/>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Čas:" FontSize="20" FontWeight="Bold"/>
                        <TextBlock x:Name="txtCas" Text="00:00:00" FontSize="22" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Box Datum -->
            <Border Grid.Row="0" Grid.Column="1" Margin="15"
                    Background="#FFCC80" CornerRadius="35"
                    MinWidth="300" MinHeight="150"
                    MaxHeight="180"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                    <Image Source="/date_icon.png" Width="50" Height="50" Margin="0,0,12,0"/>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Datum:" FontSize="20" FontWeight="Bold"/>
                        <TextBlock x:Name="txtDatum" Text="00.00.2025" FontSize="22" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Box Počet hráčů -->
            <Border Grid.Row="1" Grid.Column="0" Margin="15"
                    Background="#FFCC80" CornerRadius="35"
                    MinWidth="300" MinHeight="100"
                    MaxHeight="180"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                    <Image Source="/player.png" Width="50" Height="50" Margin="0,0,12,0"/>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Počet hráčů:" FontSize="20" FontWeight="Bold"/>
                        <TextBlock Text="18" FontSize="22" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Box Počet trenérů -->
            <Border Grid.Row="1" Grid.Column="1" Margin="15"
                    Background="#FFCC80" CornerRadius="35"
                    MinWidth="300" MinHeight="150"
                    MaxHeight="180"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                    <Image Source="/coach.png" Width="50" Height="50" Margin="0,0,12,0"/>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Počet trenérů:" FontSize="20" FontWeight="Bold"/>
                        <TextBlock Text="10" FontSize="22" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
