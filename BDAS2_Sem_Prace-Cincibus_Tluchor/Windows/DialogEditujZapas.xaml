<Window x:Name="DialogEditovaniZapas" x:Class="BDAS2_Sem_Prace_Cincibus_Tluchor.Windows.DialogEditujZapas"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDAS2_Sem_Prace_Cincibus_Tluchor.Windows"
        mc:Ignorable="d"
        Title="Editování zápasu" Height="672" Width="562" MinWidth="562" MinHeight="672" MaxWidth="620" MaxHeight="730" Icon="/Images/Ikony/Ikona_Okna_Editovani.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Logo -->
            <RowDefinition Height="*"/>
            <!-- Formulář -->
            <RowDefinition Height="60"/>
            <!-- Tlačítka -->
        </Grid.RowDefinitions>

        <!-- Logo sekce -->
        <Border x:Name="borderLogo" Grid.Row="0" Padding="10">
            <Border.Background>
                <ImageBrush ImageSource="/Images/Img/pozadi_1_dialog_okna.png" Stretch="UniformToFill" TileMode="None"/>
            </Border.Background>
            <Image x:Name="imgLogo" Source="/Images/Img/Logo_SK_Lhota.png" HorizontalAlignment="Center" Height="100"/>
        </Border>

        <!-- Formulář -->
        <Grid x:Name="gridHodnoty" Grid.Row="1">
            <Grid.Background>
                <ImageBrush Stretch="Fill" ImageSource="/Images/Img/pozadi_2_dialog_okna.png"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Soutěž -->
            <TextBlock x:Name="tblockSoutez" Grid.Row="0" Grid.Column="0" Text="Vyberte soutěž:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Century Gothic" FontSize="14" FontWeight="Bold" TextWrapping="Wrap"/>
            <ComboBox x:Name="cbSoutez" Grid.Column="1" Margin="50,31,50,31" TabIndex="1" FontFamily="Century Gothic" FontSize="12" VerticalContentAlignment="Center"/>

            <!-- Datum a čas zápasu -->
            <TextBlock x:Name="tblockDatumZapasu" Grid.Row="1" Text="Datum a čas zápasu:" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Century Gothic" FontSize="14" FontWeight="Bold" TextWrapping="Wrap"/>
            <xctk:DateTimePicker x:Name="dtpDatumZapasu" Grid.Row="1" Grid.Column="1"
                FormatString="yyyy-dd-MM HH:mm"
                Watermark="Vyber datum a čas"
                ShowButtonSpinner="False" Margin="50,31,50,31" TabIndex="2" ValueChanged="dtpDatumZapasu_ValueChanged"/>

            <!-- Stav zápasu -->
            <TextBlock x:Name="tblockStavZapasu" Grid.Row="2" Text="Stav zápasu:" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Century Gothic" FontSize="14" FontWeight="Bold" TextWrapping="Wrap"/>
            <ComboBox x:Name="cbStavZapasu" Grid.Column="1" Margin="50,31,50,31" TabIndex="3" FontFamily="Century Gothic" FontSize="12" Grid.Row="2" VerticalContentAlignment="Center" IsHitTestVisible="False"/>

            <!-- Domácí tým -->
            <TextBox x:Name="tboxDomaciTym" Margin="50,31,50,31" MaxLines="10" TextWrapping="Wrap" MaxLength="30" VerticalContentAlignment="Center" TabIndex="4" FontFamily="Century Gothic" FontSize="12" Grid.Column="1" Grid.Row="3"/>
            <TextBlock x:Name="tblockDomaciTym" Grid.Row="3" Text="Domácí tým:" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Century Gothic" FontSize="14" FontWeight="Bold" TextWrapping="Wrap"/>

            <!-- Domácí tým -->
            <TextBox x:Name="tboxHosteTym" Margin="50,31,50,31" MaxLines="10" TextWrapping="Wrap" MaxLength="30" VerticalContentAlignment="Center" TabIndex="5" FontFamily="Century Gothic" FontSize="12" Grid.Column="1" Grid.Row="4"/>
            <TextBlock x:Name="tblockHosteTym" Grid.Row="4" Text="Hosté tým:" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Century Gothic" FontSize="14" FontWeight="Bold" TextWrapping="Wrap"/>

        </Grid>

        <!-- Tlačítka -->
        <Border x:Name="borderTlacitka" Grid.Row="2">
            <Border.Background>
                <ImageBrush ImageSource="/Images/Img/pozadi_3_dialog_okna.png"/>
            </Border.Background>
            <StackPanel Orientation="Horizontal" UseLayoutRounding="False" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="btnEdituj" Content="Edituj" Width="100" Padding="5,5,5,5" Margin="0,5,0,5" UseLayoutRounding="True" FontFamily="Century Gothic" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" TabIndex="6" Style="{StaticResource HoverFadeButtonStyle}" Click="btnEdituj_Click">

                </Button>
                <Button x:Name="btnUkonci" Content="Ukonči" Width="100" Padding="5,5,5,5" Margin="100,5,0,5" UseLayoutRounding="True" FontFamily="Century Gothic" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" TabIndex="7" Style="{StaticResource HoverFadeButtonStyle}" Click="btnUkonci_Click">
                    <Button.Background>
                        <SolidColorBrush Color="#DDC5D709" Opacity="0.85"/>
                    </Button.Background>
                    <Button.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF9AE818"/>
                            <GradientStop Color="#DD97F60F" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.BorderBrush>
                </Button>
            </StackPanel>
        </Border>

    </Grid>
</Window>
