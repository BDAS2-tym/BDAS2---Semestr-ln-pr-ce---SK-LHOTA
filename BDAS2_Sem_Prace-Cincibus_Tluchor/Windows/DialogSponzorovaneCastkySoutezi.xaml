<Window x:Class="BDAS2_Sem_Prace_Cincibus_Tluchor.Windows.DialogSponzorovaneCastkySoutezi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDAS2_Sem_Prace_Cincibus_Tluchor.Windows"
        mc:Ignorable="d"
        Title="Sponzorované částky" 
        
        Height="300" Width="600" Icon="/Images/Ikony/Ikona_Souteze.ico" MaxWidth="600" MaxHeight="300">

    <Grid>

      <Grid>

    <Grid.Background>
        <ImageBrush ImageSource="/Images/Img/pozadi_2_dialog_okna.png"/>
    </Grid.Background>

    <Grid.ColumnDefinitions>
        <!-- DataGrid přes celou šířku -->
        <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <!-- DATAGRID -->
    <Border Grid.Column="0"
            Margin="15,15,15,15"
            BorderBrush="#125C64"
            BorderThickness="2"
            CornerRadius="6">

        <DataGrid x:Name="dgSouteze"
                  ItemsSource="{Binding Souteze}"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  FontFamily="Century Gothic"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  BorderBrush="#125C64"
                  AlternatingRowBackground="#FFE0E0E0"
                  AutomationProperties.IsColumnHeader="True"
                  RowBackground="#FFF3F3F3"
                  RowHeight="30"
                  HeadersVisibility="Column"
                  ColumnHeaderHeight="28"
                  FontSize="11"
                  GridLinesVisibility="None"
                  SelectionMode="Single" PreviewKeyDown="dgSouteze_PreviewKeyDown"
                  >

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#AABBCC"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="FontFamily" Value="Century Gothic"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="BorderBrush" Value="#125C64"/>
                    <Setter Property="BorderThickness" Value="0,0,2,2"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFE8FFFF" Offset="1"/>
                    <GradientStop Color="#FFF3F3F3" Offset="0"/>
                </LinearGradientBrush>
            </DataGrid.Background>

            <DataGrid.Columns>
                        <DataGridTextColumn Header="Soutěž" Binding="{Binding TypSouteze}" Width="2*" ElementStyle="{StaticResource CenterCellStyle}" FontFamily="Century Gothic"/>
                        <DataGridTextColumn Header="Celková částka" Binding="{Binding CelkovaCastka}" Width="2*" ElementStyle="{StaticResource CenterCellStyle}" FontFamily="Century Gothic">
                            <DataGridTextColumn.HeaderStyle>
                                <!-- Tento kód platí pouze pro poslední sloupec hlavičky, aby se zrušilo ohraničení na pravé straně -->
                                <Style TargetType="DataGridColumnHeader">
                                    <!-- Pozadí -->
                                    <Setter Property="Background" Value="#AABBCC"/>

                                    <!-- Barva textu -->
                                    <Setter Property="Foreground" Value="Black"/>

                                    <!-- Font -->
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="FontFamily" Value="Century Gothic"/>

                                    <!-- Vycentrování textu -->
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>

                                    <!-- Ohraničení -->
                                    <Setter Property="BorderBrush" Value="#125C64"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>

                    <!-- Změna barvy pozadí a písma při výběru řádku -->
                    <DataGrid.Resources>

                        <!-- Změna barvy pozadí -->
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#fad870"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#fad870"/>

                        <!-- Změna barvy písma-->
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black"/>
                    </DataGrid.Resources>

                </DataGrid>

    </Border>

</Grid>

    </Grid>
</Window>