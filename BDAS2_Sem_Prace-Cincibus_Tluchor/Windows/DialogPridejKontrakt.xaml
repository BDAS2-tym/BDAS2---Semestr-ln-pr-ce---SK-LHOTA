<Window x:Name="DialogPridaniKontraktu" x:Class="BDAS2_Sem_Prace_Cincibus_Tluchor.Windows.DialogPridejKontrakt"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDAS2_Sem_Prace_Cincibus_Tluchor.Windows"
        mc:Ignorable="d"
        Title="Přidání kontraktu" Height="672" Width="562" MinWidth="562" MinHeight="672" MaxWidth="620" MaxHeight="730" Icon="/Images/Ikony/Ikona_Okna_Pridani.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Logo -->
            <RowDefinition Height="*"/>
            <!-- Formulář -->
            <RowDefinition Height="60"/>
            <!-- Tlačítka -->
        </Grid.RowDefinitions>

        <!-- Logo sekce -->
        <Border x:Name="borderLogo" Grid.Row="0" Padding="10">
            <Border.Background>
                <ImageBrush ImageSource="/Images/Img/pozadi_1_dialog_okna.png" Stretch="UniformToFill" TileMode="None"/>
            </Border.Background>
            <Image x:Name="imgLogo" Source="/Images/Img/Logo_SK_Lhota.png" HorizontalAlignment="Center" Height="100"/>
        </Border>

        <!-- Formulář -->
        <Grid x:Name="gridHodnoty" Grid.Row="1">
            <Grid.Background>
                <ImageBrush Stretch="Fill" ImageSource="/Images/Img/pozadi_2_dialog_okna.png"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- ID -->
            <TextBlock x:Name="tblockId" Grid.Row="0" Grid.Column="0" Text="ID:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Century Gothic" FontSize="14" FontWeight="Bold" TextWrapping="Wrap"/>
            <TextBox x:Name="tboxId" Grid.Row="0" Grid.Column="1" Margin="50,25,50,25" TextWrapping="Wrap" MaxLength="10" MaxLines="5" AutoWordSelection="True" VerticalContentAlignment="Center" TabIndex="1" FontFamily="Century Gothic" FontSize="12"/>

            <!-- Počet let kontraktu -->
            <TextBlock x:Name="tblockPocetLetKontraktu" Grid.Row="1" Grid.Column="0" Text="Počet let platného kontraktu:" Margin="5" FontFamily="Century Gothic" FontSize="14" FontWeight="Bold" UseLayoutRounding="False" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <xctk:IntegerUpDown x:Name="iudPocetLetKontraktu" Grid.Row="1" Grid.Column="1" Margin="50,25,50,25"
                Minimum="0" Maximum="100" Value="0" ButtonSpinnerWidth="19" ClipValueToMinMax="True" DefaultValue="0" DisplayDefaultValueOnEmptyText="True" IsUndoEnabled="False" Text="" TextAlignment="Right" UpdateValueOnEnterKey="True" IsTabStop="False" TabIndex="2" FontFamily="Century Gothic" FontSize="12"/>

            <!-- Plat -->
            <TextBlock x:Name="tblockPlat" Grid.Row="2" Grid.Column="0" Text="Plat (KČ):" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Century Gothic" FontSize="14" FontWeight="Bold" TextWrapping="Wrap"/>
            <TextBox x:Name="tboxPlat" Grid.Row="2" Grid.Column="1" Margin="50,25,50,25" MaxLines="10" TextWrapping="Wrap" MaxLength="10" VerticalContentAlignment="Center" TabIndex="3" FontFamily="Century Gothic" FontSize="12"/>

            <!-- Telefonní číslo agenta -->
            <TextBlock x:Name="tblockTelCisloAgenta" Grid.Row="3" Grid.Column="0" Text="Telefonní číslo agenta:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Century Gothic" FontSize="14" FontWeight="Bold" TextWrapping="Wrap"/>
            <TextBox x:Name="tboxTelCisloAgenta" Grid.Row="3" Grid.Column="1" Margin="50,25,50,25" MaxLines="10" TextWrapping="Wrap" MaxLength="13" VerticalContentAlignment="Center" TabIndex="4" FontFamily="Century Gothic" FontSize="12"/>

            <!-- Výstupní klauzule -->
            <TextBlock x:Name="tblockVystupniKlauzule" Grid.Row="4" Grid.Column="0" Text="Výstupní klauzule hráče (KČ):" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Century Gothic" FontSize="14" FontWeight="Bold" TextWrapping="Wrap"/>
            <TextBox x:Name="tboxVystupniKlauzule" Grid.Row="4" Grid.Column="1" Margin="50,25,50,25" MaxLines="10" TextWrapping="Wrap" MaxLength="10" VerticalContentAlignment="Center" TabIndex="5" FontFamily="Century Gothic" FontSize="12"/>

            <!-- Výběr hráče -->
            <TextBlock x:Name="tblockVyberHrace" Grid.Row="5" Grid.Column="0" Text="Vyberte daného hráče:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Century Gothic" FontSize="14" FontWeight="Bold"/>
            <ComboBox x:Name="cbHrac" Grid.Column="1" Grid.Row="5" Margin="50,25,50,25" TabIndex="6" FontFamily="Century Gothic" FontSize="12"/>
        </Grid>

        <!-- Tlačítka -->
        <Border x:Name="borderTlacitka" Grid.Row="2">
            <Border.Background>
                <ImageBrush ImageSource="/Images/Img/pozadi_3_dialog_okna.png"/>
            </Border.Background>
            <StackPanel Orientation="Horizontal" UseLayoutRounding="False" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="btnPridej" Content="Přidej" Width="100" Padding="5,5,5,5" Margin="0,5,0,5" UseLayoutRounding="True" FontFamily="Century Gothic" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" TabIndex="7" Style="{StaticResource HoverFadeButtonStyle}">

                </Button>
                <Button x:Name="btnReset" Content="Reset" Width="100" Padding="5,5,5,5" Margin="100,5,0,5" UseLayoutRounding="True" FontFamily="Century Gothic" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" TabIndex="8" Style="{StaticResource HoverFadeButtonStyle}" Click="btnReset_Click">
                    <Button.Background>
                        <SolidColorBrush Color="#DDC5D709" Opacity="0.85"/>
                    </Button.Background>
                    <Button.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF9AE818"/>
                            <GradientStop Color="#DD97F60F" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.BorderBrush>
                </Button>
            </StackPanel>
        </Border>

    </Grid>
</Window>
