<Window x:Class="BDAS2_Sem_Prace_Cincibus_Tluchor.Windows.GrafyOkno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Grafy"
        Width="1400" Height="700"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Icon="/Images/Ikony/Ikona_Grafy.ico">

    <Grid>
        <!-- Pozadí -->
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Img/pozadi_2_dialog_okna.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Levý + pravý panel -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="260" />
        </Grid.ColumnDefinitions>

        <!-- LEVÁ ČÁST – grafy pod sebou, scrollovatelná -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="30,20,20,20">
            <StackPanel Orientation="Vertical" Margin="0,0,20,0">

                <!-- GRAF 1 – Poměr hráčů a trenérů -->
                <Border Background="#F3F3F3"
                        BorderBrush="#125C64"
                        BorderThickness="2"
                        CornerRadius="12"
                        Padding="10"
                        Margin="0,0,0,20">

                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Poměr hráčů a trenérů"
                                   FontFamily="Century Gothic"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <lvc:PieChart Series="{Binding PomeryHracuTreneru}"
                                      LegendLocation="Bottom"
                                      InnerRadius="50"
                                      Height="300"
                                      Width="400" />

                    </StackPanel>
                </Border>


                <!-- GRAF 2 – Podíl gólů podle pozic -->
                <Border Background="#F3F3F3"
                        BorderBrush="#125C64"
                        BorderThickness="2"
                        CornerRadius="12"
                        Padding="10">

                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Podíl vstřelených gólů podle pozic (%)"
                                   FontFamily="Century Gothic"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <lvc:CartesianChart Series="{Binding IndexyPozic}"
                                            LegendLocation="Bottom"
                                            Height="350"
                                            Width="600">

                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Title="Pozice"
                                          Labels="{Binding NazvyPozic}" />
                            </lvc:CartesianChart.AxisX>

                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Title="Procenta (%)"
                                          MinValue="0"
                                          MaxValue="100" />
                            </lvc:CartesianChart.AxisY>

                        </lvc:CartesianChart>

                    </StackPanel>

                </Border>

            </StackPanel>
        </ScrollViewer>


        <!-- PRAVÝ PANEL -->
        <Border Grid.Column="1"
                Background="#77B3FB"
                CornerRadius="0,15,15,0">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" VerticalAlignment="Center">
                    <TextBlock Text="Statistiky"
                               FontFamily="Century Gothic"
                               FontSize="28"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <Button x:Name="btnZpet"
                        Content="Zpět"
                        Width="120"
                        Height="40"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,30"
                        Click="BtnZpet_Click"
                        FontFamily="Century Gothic"
                        Background="#6CA0DC"
                        BorderBrush="#125C64"
                        BorderThickness="2" />

            </Grid>

        </Border>

    </Grid>
</Window>
