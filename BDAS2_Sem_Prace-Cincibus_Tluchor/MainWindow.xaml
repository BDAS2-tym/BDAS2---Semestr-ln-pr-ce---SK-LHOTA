<Window x:Class="BDAS2_Sem_Prace_Cincibus_Tluchor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Informační systém SK Lhota" Height="708" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="0,0,0,-16">
        <!-- Hlavní rozdělení: levý panel + obsah -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*" MinWidth="150"/>
            <ColumnDefinition Width="8.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Horní pruh přes celou šířku -->
        <Border Grid.ColumnSpan="2" Background="#1565C0" Height="70">


        </Border>

        <!-- Levé menu -->
        <Grid Grid.Row="1" Background="#77B3FB" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Logo -->
                <RowDefinition Height="Auto"/>
                <!-- Obdélník s nápisem -->
                <RowDefinition Height="*"/>
                <!-- Tlačítka -->
            </Grid.RowDefinitions>

            <!-- Logo vlevo nahoře -->
            <Image Source="/Logo_SK_Lhota.png"
                   Height="112"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Width="98"/>

            <!-- Obdélník s nápisem -->
            <Border Grid.Row="1" Background="#77B3FB" Height="50" VerticalAlignment="Center">
                <TextBlock Text="SK Lhota" 
                           Foreground="Black" 
                           FontSize="20" 
                           FontWeight="Bold"
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center"
                           Margin="10"/>
            </Border>

            <!-- Tlačítka -->
            <StackPanel Grid.Row="2" Margin="0,10,0,0">

                <!-- Hráči -->
                <Button Height="50" Margin="5" FontFamily="Century Gothic" FontSize="9.75" Background="#77B3FB">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="/player.png" Width="35" Height="35" Margin="5,0,10,0"/>
                        <TextBlock Text="Hráči" VerticalAlignment="Center" Foreground="Black" FontSize="13"/>
                    </StackPanel>
                </Button>

                <!-- Trenéři -->
                <Button Height="50" Margin="5" FontFamily="Century Gothic" FontSize="9.75" Background="#77B3FB">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="/coach.png" Width="35" Height="35" Margin="5,0,10,0"/>
                        <TextBlock Text="Trenéři" VerticalAlignment="Center" Foreground="Black" FontSize="13"/>
                    </StackPanel>
                </Button>

                <!-- Tréninky -->
                <Button Height="50" Margin="5" FontFamily="Century Gothic" FontSize="9.75" Background="#77B3FB">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="/training.png" Width="35" Height="35" Margin="5,0,10,0"/>
                        <TextBlock Text="Tréninky" VerticalAlignment="Center" Foreground="Black" FontSize="13"/>
                    </StackPanel>
                </Button>

                <!-- Kontrakty -->
                <Button Height="50" Margin="5" FontFamily="Century Gothic" FontSize="9.75" Background="#77B3FB">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="/contract.png" Width="35" Height="35" Margin="5,0,10,0"/>
                        <TextBlock Text="Kontrakty" VerticalAlignment="Center" Foreground="Black" FontSize="13"/>
                    </StackPanel>
                </Button>

                <!-- Opatření -->
                <Button Height="50" Margin="5" FontFamily="Century Gothic" FontSize="9.75" Background="#77B3FB">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="/red_card.png" Width="35" Height="35" Margin="5,0,10,0"/>
                        <TextBlock Text="Opatření" VerticalAlignment="Center" Foreground="Black" FontSize="13"/>
                    </StackPanel>
                </Button>

                <!-- Graf -->
                <Button Height="50" Margin="5" FontFamily="Century Gothic" FontSize="9.75" Background="#77B3FB">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="/graph_icon.png" Width="35" Height="35" Margin="5,0,10,0"/>
                        <TextBlock Text="Graf" VerticalAlignment="Center" Foreground="Black" FontSize="13"/>
                    </StackPanel>
                </Button>

                <!-- Odhlásit -->
                <Button Height="50" Margin="5" FontFamily="Century Gothic" FontSize="9.75" Background="#77B3FB">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="/logout.png" Width="35" Height="35" Margin="5,0,10,0"/>
                        <TextBlock Text="Odhlásit" VerticalAlignment="Center" Foreground="Black" FontSize="13"/>
                    </StackPanel>
                </Button>

                <!-- Exit -->
                <Button Height="50" Margin="5" FontFamily="Century Gothic" FontSize="9.75" Background="#77B3FB">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="/left_icon.png" Width="35" Height="35" Margin="5,0,10,0"/>
                        <TextBlock Text="Exit" VerticalAlignment="Center" Foreground="Black" FontSize="13"/>
                    </StackPanel>
                </Button>

            </StackPanel>
        </Grid>

        <!-- Obsah -->
        <Grid Grid.Row="1" Grid.Column="1" Background="#FFFFFF" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Box Čas -->
            <Border Grid.Row="0" Grid.Column="0" Margin="10" Background="#FFCC80" CornerRadius="10" Height="150">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                    <Image Source="Resources/Images/clock_icon.png" Width="40" Height="40" Margin="0,0,15,0"/>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Čas:" FontSize="18" FontWeight="Bold"/>
                        <TextBlock Text="00:00:00" FontSize="22" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Box Datum -->
            <Border Grid.Row="0" Grid.Column="1" Margin="10" Background="#FFCC80" CornerRadius="10" Height="150" >
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="Datum:" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="25.09.2025" FontSize="22" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- Box Počet hráčů -->
            <Border Grid.Row="1" Grid.Column="0" Margin="10" Background="#FFCC80" CornerRadius="10" Height="150" >
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="Počet hráčů:" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="18" FontSize="22" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- Box Počet trenérů -->
            <Border Grid.Row="1" Grid.Column="1" Margin="10" Background="#FFCC80" CornerRadius="10" Height="150" >
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="Počet trenérů:" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="10" FontSize="22" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
