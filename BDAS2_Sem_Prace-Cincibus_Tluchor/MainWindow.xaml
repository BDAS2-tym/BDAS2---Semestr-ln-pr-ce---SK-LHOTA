<Window x:Class="BDAS2_Sem_Prace_Cincibus_Tluchor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Informační systém SK Lhota" Height="708" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Hlavní rozdělení: levý panel + obsah -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <!-- levé menu = 2 díly -->
            <ColumnDefinition Width="8*"/>
            <!-- hlavní obsah = 8 dílů -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- horní pruh podle obsahu -->
            <RowDefinition Height="*"/>
            <!-- zbytek okna -->
        </Grid.RowDefinitions>

        <!-- Horní pruh -->
        <Border Grid.ColumnSpan="2" Background="#1565C0">
            <TextBlock Text="Informační systém SK Lhota" 
                       Foreground="White" FontSize="20" 
                       VerticalAlignment="Center" Margin="20,0"/>
        </Border>

        <!-- Levé menu -->
        <!-- Levé menu -->
        <StackPanel Grid.Row="1" Background="#77B3FB">

            <!-- Logo -->
            <Image Source="Resources/Images/ikona.png"
           Height="100" 
           Margin="10"
           HorizontalAlignment="Center"/>

            <!-- Hráči -->
            <Button Height="50" Margin="5" FontFamily="Century Gothic" FontSize="9.75" Background="#77B3FB">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Resources/Images/player.png" Width="20" Height="20" Margin="5,0,10,0"/>
                    <TextBlock Text="Hráči" VerticalAlignment="Center" Foreground="Black"/>
                </StackPanel>
            </Button>

            <!-- Trenéři -->
            <Button Height="50" Margin="5" FontFamily="Century Gothic" FontSize="9.75" Background="#77B3FB">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Resources/Images/coach.png" Width="20" Height="20" Margin="5,0,10,0"/>
                    <TextBlock Text="Trenéři" VerticalAlignment="Center" Foreground="Black"/>
                </StackPanel>
            </Button>

            <!-- Tréninky -->
            <Button Height="50" Margin="5" FontFamily="Century Gothic" FontSize="9.75" Background="#77B3FB">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Resources/Images/training.png" Width="20" Height="20" Margin="5,0,10,0"/>
                    <TextBlock Text="Tréninky" VerticalAlignment="Center" Foreground="Black"/>
                </StackPanel>
            </Button>

            <!-- Kontrakty -->
            <Button Height="50" Margin="5" FontFamily="Century Gothic" FontSize="9.75" Background="#77B3FB">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Resources/Images/contract.png" Width="20" Height="20" Margin="5,0,10,0"/>
                    <TextBlock Text="Kontrakty" VerticalAlignment="Center" Foreground="Black"/>
                </StackPanel>
            </Button>

            <!-- Opatření -->
            <Button Height="50" Margin="5" FontFamily="Century Gothic" FontSize="9.75" Background="#77B3FB">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Resources/Images/red_card.png" Width="20" Height="20" Margin="5,0,10,0"/>
                    <TextBlock Text="Opatření" VerticalAlignment="Center" Foreground="Black"/>
                </StackPanel>
            </Button>

            <!-- Graf -->
            <Button Height="50" Margin="5" FontFamily="Century Gothic" FontSize="9.75" Background="#77B3FB">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Resources/Images/graph_icon.png" Width="20" Height="20" Margin="5,0,10,0"/>
                    <TextBlock Text="Graf" VerticalAlignment="Center" Foreground="Black"/>
                </StackPanel>
            </Button>

            <!-- Odhlásit -->
            <Button Height="50" Margin="5" FontFamily="Century Gothic" FontSize="9.75" Background="#77B3FB">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Resources/Images/logout.png" Width="20" Height="20" Margin="5,0,10,0"/>
                    <TextBlock Text="Odhlásit" VerticalAlignment="Center" Foreground="Black"/>
                </StackPanel>
            </Button>

            <!-- Exit -->
            <Button Height="50" Margin="5" FontFamily="Century Gothic" FontSize="9.75" Background="#77B3FB">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Resources/Images/left_icon.png" Width="20" Height="20" Margin="5,0,10,0"/>
                    <TextBlock Text="Exit" VerticalAlignment="Center" Foreground="Black"/>
                </StackPanel>
            </Button>

        </StackPanel>


        <!-- Obsah -->
        <Grid Grid.Row="1" Grid.Column="1" Background="#F5F5F5" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Box Čas -->
            <Border Grid.Row="0" Grid.Column="0" Margin="10" Background="#FFCC80" CornerRadius="10">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="Čas:" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="00:00:00" FontSize="22" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- Box Datum -->
            <Border Grid.Row="0" Grid.Column="1" Margin="10" Background="#FFCC80" CornerRadius="10">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="Datum:" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="25.09.2025" FontSize="22" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- Box Počet hráčů -->
            <Border Grid.Row="1" Grid.Column="0" Margin="10" Background="#FFCC80" CornerRadius="10">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="Počet hráčů:" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="18" FontSize="22" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- Box Počet trenérů -->
            <Border Grid.Row="1" Grid.Column="1" Margin="10" Background="#FFCC80" CornerRadius="10">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="Počet trenérů:" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="10" FontSize="22" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
